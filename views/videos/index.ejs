<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="/Backpack.png">
  
  <!-- SEO Meta Tags -->
  <%- include('../partials/seo-meta', { 
    currentPath: typeof currentPath !== 'undefined' ? currentPath : '/videos'
  }) %>
  
  <script>
    document.documentElement.classList.add('js-enabled');
    document.documentElement.classList.remove('no-js');
  </script>
  
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <style>
    .videos-section {
      padding: 4rem 0;
      background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
      position: relative;
      overflow: hidden;
      min-height: 100vh;
    }

    .videos-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image:
        linear-gradient(rgba(255,255,255,0.04) 1px, transparent 1px),
        linear-gradient(90deg, rgba(255,255,255,0.04) 1px, transparent 1px);
      background-size: 50px 50px;
      opacity: 1;
      z-index: 0;
      pointer-events: none;
      transform: translateZ(0);
      backface-visibility: hidden;
    }

    @media (max-width: 768px) {
      .videos-section::before {
        background-image:
          linear-gradient(rgba(255,255,255,0.03) 1px, transparent 1px),
          linear-gradient(90deg, rgba(255,255,255,0.03) 1px, transparent 1px);
        background-size: 40px 40px;
      }
    }

    .section-header {
      text-align: center;
      margin-bottom: 3rem;
      position: relative;
      z-index: 1;
    }

    .section-header h1 {
      color: white;
      font-size: 3rem;
      font-weight: 800;
      margin-bottom: 0.5rem;
    }

    .section-header h1 .highlight {
      color: #c51d34;
    }

    .section-header p {
      color: rgba(255, 255, 255, 0.8);
      font-size: 1.125rem;
      max-width: 600px;
      margin: 0 auto;
    }

    .search-section {
      max-width: 600px;
      margin: 0 auto 3rem;
      position: relative;
      z-index: 1;
    }

    .search-form {
      display: flex;
      gap: 0.75rem;
    }

    .search-input {
      flex: 1;
      padding: 1rem 1.5rem;
      border-radius: 12px;
      border: 2px solid rgba(255, 255, 255, 0.2);
      background: rgba(255, 255, 255, 0.1);
      color: white;
      font-size: 1rem;
      backdrop-filter: blur(10px);
    }

    .search-input::placeholder {
      color: rgba(255, 255, 255, 0.6);
    }

    .search-input:focus {
      outline: none;
      border-color: #c51d34;
      background: rgba(255, 255, 255, 0.15);
    }

    .search-btn {
      padding: 1rem 2rem;
      border-radius: 12px;
      border: none;
      background: #c51d34;
      color: white;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s;
    }

    .search-btn:hover {
      background: #a01628;
      transform: translateY(-2px);
    }

    .videos-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 2rem;
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 2rem;
      position: relative;
      z-index: 1;
    }

    .video-card {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(10px);
      border-radius: 16px;
      overflow: hidden;
      border: 1px solid rgba(255, 255, 255, 0.1);
      transition: all 0.3s ease;
    }

    .video-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
      border-color: rgba(197, 29, 52, 0.3);
    }

    .video-thumbnail-wrapper {
      position: relative;
      width: 100%;
      padding-top: 56.25%;
      background: rgba(0, 0, 0, 0.3);
      overflow: hidden;
      display: block;
    }

    .video-thumbnail-wrapper img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.4s ease;
    }

    .video-card:hover .video-thumbnail-wrapper img {
      transform: scale(1.05);
    }

    .video-play-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(0, 0, 0, 0.35);
      transition: background 0.3s ease;
    }

    .video-card:hover .video-play-overlay {
      background: rgba(0, 0, 0, 0.5);
    }

    .play-button {
      width: 70px;
      height: 70px;
      border-radius: 50%;
      background: linear-gradient(135deg, #c51d34 0%, #a01628 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 8px 30px rgba(197, 29, 52, 0.4);
      transition: all 0.3s ease;
    }

    .video-card:hover .play-button {
      transform: scale(1.1);
      box-shadow: 0 12px 40px rgba(197, 29, 52, 0.5);
    }

    .play-button i {
      color: white;
      font-size: 1.75rem;
      margin-left: 4px;
    }

    .video-thumbnail-placeholder {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(0, 0, 0, 0.4);
    }

    .video-thumbnail-placeholder i {
      color: rgba(255, 255, 255, 0.5);
      font-size: 3rem;
    }

    .video-content {
      padding: 1.5rem;
    }

    .video-title {
      color: white;
      font-size: 1.25rem;
      font-weight: 700;
      margin: 0 0 0.75rem 0;
      line-height: 1.3;
    }

    .video-description {
      color: rgba(255, 255, 255, 0.7);
      font-size: 0.9375rem;
      line-height: 1.6;
      margin: 0;
    }

    /* YouTube Shorts styling - keep same card size, YouTube handles the letterboxing */
    .video-short-badge {
      display: inline-block;
      background: #c51d34;
      color: white;
      font-size: 0.75rem;
      font-weight: 600;
      padding: 0.25rem 0.5rem;
      border-radius: 4px;
      margin-bottom: 0.5rem;
    }

    .video-short-badge i {
      margin-right: 0.25rem;
    }

    .empty-state {
      text-align: center;
      padding: 4rem 2rem;
      color: white;
      position: relative;
      z-index: 1;
    }

    .empty-state i {
      font-size: 4rem;
      margin-bottom: 1rem;
      display: block;
    }

    .pagination {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 0.5rem;
      margin-top: 3rem;
      position: relative;
      z-index: 1;
      flex-wrap: wrap;
    }

    .pagination-link {
      padding: 0.75rem 1.25rem;
      border-radius: 8px;
      text-decoration: none;
      color: white;
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      transition: all 0.3s;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .pagination-link:hover:not(.disabled):not(.current) {
      background: #c51d34;
      border-color: #c51d34;
      transform: translateY(-2px);
    }

    .pagination-link.current {
      background: #c51d34;
      border-color: #c51d34;
      font-weight: 600;
    }

    .pagination-link.disabled {
      opacity: 0.5;
      cursor: not-allowed;
      pointer-events: none;
    }

    .pagination-ellipsis {
      padding: 0.75rem 0.5rem;
      color: rgba(255, 255, 255, 0.6);
    }

    @media (max-width: 768px) {
      .section-header h1 {
        font-size: 2rem;
      }

      .videos-grid {
        grid-template-columns: 1fr;
        padding: 0 1rem;
      }

      .search-form {
        flex-direction: column;
      }
    }

    /* Ensure content is visible by default */
    section,
    footer,
    .section-header {
      opacity: 1;
      visibility: visible;
    }

    /* For no-JS users */
    html.no-js section,
    html.no-js footer,
    html.no-js .section-header {
      opacity: 1 !important;
      visibility: visible !important;
      transform: none !important;
    }
  </style>
</head>
<body>
  <%- include('../partials/header') %>

  <section class="videos-section">
    <div class="container">
      <div class="section-header">
        <h1><span class="highlight" style="text-shadow: 0 0 10px rgba(197, 29, 52, 0.5), 0 0 20px rgba(197, 29, 52, 0.3), 0 0 30px rgba(197, 29, 52, 0.2);">We Code</span>, We Show</h1>
        <p>Watch our latest videos and stay updated with tech insights, tutorials, and more</p>
      </div>

      <div class="search-section">
        <form method="GET" action="/videos" class="search-form">
          <input 
            type="text" 
            name="search" 
            class="search-input" 
            placeholder="Search videos..."
            value="<%= searchQuery || '' %>"
          >
          <button type="submit" class="search-btn">
            <i class="fas fa-search"></i> Search
          </button>
        </form>
      </div>

      <% if (videos && videos.length > 0) { %>
        <div class="videos-grid">
          <% videos.forEach(video => { %>
            <% 
              // Extract YouTube video ID from URL and detect if it's a Short
              let videoId = '';
              let isShort = false;
              if (video.youtube_url) {
                // Check if it's a YouTube Short
                const shortsMatch = video.youtube_url.match(/youtube\.com\/shorts\/([^&\n?#]+)/);
                if (shortsMatch) {
                  videoId = shortsMatch[1];
                  isShort = true;
                } else {
                  const urlMatch = video.youtube_url.match(/(?:youtube\.com\/watch\?v=|youtu\.be\/|youtube\.com\/embed\/)([^&\n?#]+)/);
                  videoId = urlMatch ? urlMatch[1] : '';
                }
              }
            %>
            <div class="video-card">
              <a href="/videos/<%= video.id %>" class="video-thumbnail-wrapper">
                <% if (videoId) { %>
                  <img src="https://img.youtube.com/vi/<%= videoId %>/maxresdefault.jpg" 
                       alt="<%= video.title %>" 
                       loading="lazy"
                       onerror="this.src='https://img.youtube.com/vi/<%= videoId %>/hqdefault.jpg'">
                  <div class="video-play-overlay">
                    <div class="play-button">
                      <i class="fas fa-play"></i>
                    </div>
                  </div>
                <% } else { %>
                  <div class="video-thumbnail-placeholder">
                    <i class="fas fa-video"></i>
                  </div>
                <% } %>
              </a>
              <div class="video-content">
                <% if (isShort) { %><span class="video-short-badge"><i class="fas fa-bolt"></i> Short</span><% } %>
                <a href="/videos/<%= video.id %>" style="text-decoration: none;">
                  <h3 class="video-title"><%= video.title %></h3>
                </a>
                <% if (video.description) { %>
                  <p class="video-description"><%= video.description %></p>
                <% } %>
              </div>
            </div>
          <% }) %>
        </div>

        <% if (pagination && pagination.totalPages > 1) { %>
          <div class="pagination">
            <% if (pagination.hasPrev) { %>
              <a href="/videos?page=<%= pagination.currentPage - 1 %><%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" class="pagination-link">
                <i class="fas fa-chevron-left"></i>
              </a>
            <% } else { %>
              <span class="pagination-link disabled">
                <i class="fas fa-chevron-left"></i>
              </span>
            <% } %>

            <% 
              let startPage = Math.max(1, pagination.currentPage - 2);
              let endPage = Math.min(pagination.totalPages, pagination.currentPage + 2);
              if (endPage - startPage < 4) {
                if (startPage === 1) {
                  endPage = Math.min(5, pagination.totalPages);
                } else {
                  startPage = Math.max(1, pagination.totalPages - 4);
                }
              }
            %>

            <% if (startPage > 1) { %>
              <a href="/videos?page=1<%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" class="pagination-link">1</a>
              <% if (startPage > 2) { %>
                <span class="pagination-ellipsis">...</span>
              <% } %>
            <% } %>

            <% for (let i = startPage; i <= endPage; i++) { %>
              <% if (i === pagination.currentPage) { %>
                <span class="pagination-link current"><%= i %></span>
              <% } else { %>
                <a href="/videos?page=<%= i %><%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" class="pagination-link"><%= i %></a>
              <% } %>
            <% } %>

            <% if (endPage < pagination.totalPages) { %>
              <% if (endPage < pagination.totalPages - 1) { %>
                <span class="pagination-ellipsis">...</span>
              <% } %>
              <a href="/videos?page=<%= pagination.totalPages %><%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" class="pagination-link"><%= pagination.totalPages %></a>
            <% } %>

            <% if (pagination.hasNext) { %>
              <a href="/videos?page=<%= pagination.currentPage + 1 %><%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>" class="pagination-link">
                <i class="fas fa-chevron-right"></i>
              </a>
            <% } else { %>
              <span class="pagination-link disabled">
                <i class="fas fa-chevron-right"></i>
              </span>
            <% } %>
          </div>
        <% } %>
      <% } else { %>
        <div class="empty-state">
          <i class="fas fa-video"></i>
          <h3 style="color: #e0e0e0;">No Videos Found</h3>
          <p style="color: #e0e0e0;">
            <%= searchQuery ? 'Try a different search term.' : 'No videos available yet. Check back soon!' %>
          </p>                  
        </div>
      <% } %>
    </div>
  </section>

  <%- include('../partials/footer') %>

  <script>
    // Ensure content is visible for no-JS users
    document.documentElement.classList.add('js-enabled');
    document.documentElement.classList.remove('no-js');

    // Animation observer for videos page - simplified
    (function() {
      // Elements are visible by default, observer just adds visible class for animations
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          }
        });
      }, {
        threshold: 0.1,
        rootMargin: '0px'
      });

      function initAnimations() {
        const sections = document.querySelectorAll('section');
        const footer = document.querySelector('footer');
        const header = document.querySelector('.section-header');
        
        // Observe all elements
        sections.forEach(section => observer.observe(section));
        if (footer) observer.observe(footer);
        if (header) observer.observe(header);

        // Check if elements are already in viewport
        const checkVisibility = () => {
          // Convert NodeList to array and add other elements
          const elements = [...sections];
          if (footer) elements.push(footer);
          if (header) elements.push(header);
          
          elements.forEach(el => {
            if (el && typeof el.getBoundingClientRect === 'function') {
              const rect = el.getBoundingClientRect();
              if (rect.top < window.innerHeight && rect.bottom > 0) {
                el.classList.add('visible');
              }
            }
          });
        };

        // Check immediately and after a short delay
        checkVisibility();
        setTimeout(checkVisibility, 100);
      }

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initAnimations);
      } else {
        initAnimations();
      }
    })();
  </script>
</body>
</html>

