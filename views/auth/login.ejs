    }

    @media (max-width: 480px) {
      .auth-container {
        padding: 20px 16px;
        gap: 20px;
        min-height: calc(100vh - 60px);
      }

      .auth-card {
        padding: 24px 20px;
        border-radius: 18px;
      }

      .auth-icon {
        width: 52px;
        height: 52px;
        font-size: 1.5rem;
        margin-bottom: 12px;
      }

      .auth-card h2 {
        font-size: 1.5rem;
      }

      .auth-subtitle {
        font-size: 0.85rem;
        margin-bottom: 20px;
      }

      .oauth-buttons {
        gap: 10px;
        margin-bottom: 20px;
      }

      .btn-oauth {
        padding: 12px 16px;
        font-size: 0.9rem;
        border-radius: 10px;
      }

      .btn-oauth svg {
        width: 16px;
        height: 16px;
      }

      .auth-divider {
        margin: 20px 0;
      }

      .auth-divider span {
        font-size: 0.85rem;
        padding: 0 12px;
      }

      .auth-footer {
        margin-top: 20px;
        padding-top: 16px;
      }

      .auth-footer p {
        font-size: 0.8rem;
        line-height: 1.4;
      }

      .duplicate-modal-content {
        padding: 20px 16px;
        border-radius: 18px;
      }

      .duplicate-modal-image {
        max-width: 160px;
        margin-bottom: 14px;
      }

      .duplicate-modal-title {
        font-size: 1.2rem;
        margin-bottom: 8px;
      }

      .duplicate-modal-message {
        font-size: 0.85rem;
        margin-bottom: 14px;
        line-height: 1.5;
      }

      .duplicate-modal-email {
        font-size: 0.9rem;
        padding: 6px 12px;
      }

      .duplicate-modal-button {
        padding: 12px 24px;
        font-size: 0.9rem;
        max-width: 100%;
      }
    }

    @media (max-width: 360px) {
      .auth-container {
        padding: 16px 12px;
      }

      .auth-card {
        padding: 20px 16px;
      }

      .auth-card h2 {
        font-size: 1.4rem;
      }

      .btn-oauth {
        padding: 11px 14px;
        font-size: 0.85rem;
      }
    }

    /* Landscape orientation for mobile */
    @media (max-width: 768px) and (orientation: landscape) {
      .auth-container {
        min-height: auto;
        padding: 20px;
        gap: 20px;
      }

      .auth-card {
        padding: 24px 20px;
      }

      .auth-image-section {
        display: none;
      }
    }
  </style>
</head>
<body>
