<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500;600;700&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <style>
    body {
      overflow-x: hidden;
      position: relative;
    }

    .auth-container {
      height: auto;
      min-height: calc(100vh - 80px);
      max-height: none;
      display: grid;
      grid-template-columns: 1fr 1fr;
      align-items: center;
      justify-content: center;
      gap: clamp(40px, 6vw, 80px);
      padding: clamp(20px, 3vh, 40px) clamp(30px, 4vw, 60px);
      position: relative;
      max-width: 1600px;
      margin: 0 auto;
      overflow-x: hidden;
    }

    .work-quote {
      position: absolute;
      bottom: 40px;
      right: -280px; 
      left: auto;
      transform: none;
      z-index: 15;
      text-align: center;
      font-family: 'Playfair Display', 'Dancing Script', cursive;
      font-size: clamp(1.1rem, 2.2vw, 1.5rem);
      font-weight: 500;
      font-style: italic;
      color: #000000;
      background: linear-gradient(145deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.9));
      backdrop-filter: blur(10px);
      padding: 20px 30px;
      border-radius: 16px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
      border: 1px solid rgba(0, 0, 0, 0.1);
      opacity: 0;
      animation: fadeUp 0.8s ease forwards;
      animation-delay: 0.5s;
      max-width: 320px;
      width: auto;
      pointer-events: auto;
    }

    .work-quote-text {
      color: #000000;
      margin: 0 0 12px 0;
      line-height: 1.5;
      font-size: 1.05em;
    }

    .work-quote-author {
      color: var(--red);
      font-size: 0.95em;
      font-weight: 700;
      font-style: normal;
      margin: 0;
      opacity: 1;
      letter-spacing: 0.5px;
    }

    .work-quote::before {
      content: '"';
      font-size: 1.8em;
      color: #000000;
      margin-right: 6px;
    }

    .work-quote::after {
      content: '"';
      font-size: 1.8em;
      color: #000000;
      margin-left: 6px;
    }

    .auth-image-section {
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 0;
      transform: translateY(30px);
      animation: fadeUp 0.8s ease forwards;
      animation-delay: 0.3s;
      z-index: 1;
      pointer-events: none;
      user-select: none;
    }

    .auth-image-section::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 90%;
      height: 90%;
      background: radial-gradient(circle, rgba(197, 29, 52, 0.5) 0%, rgba(197, 29, 52, 0.3) 30%, transparent 70%);
      border-radius: 50%;
      animation: pulse 4s ease-in-out infinite;
      z-index: 0;
      filter: blur(50px);
    }

    @keyframes pulse {
      0%, 100% {
        transform: translate(-50%, -50%) scale(1);
        opacity: 0.6;
      }
      50% {
        transform: translate(-50%, -50%) scale(1.1);
        opacity: 0.8;
      }
    }

    .auth-image-wrapper {
      position: relative;
      max-width: 550px;
      max-height: 75vh;
      width: 100%;
      z-index: 2;
      pointer-events: auto;
      user-select: none;
    }

    .image-protection-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 10;
      background: transparent;
      cursor: default;
      pointer-events: auto;
      user-select: none;
      -webkit-user-drag: none;
    }

    .auth-image {
      position: relative;
      width: 100%;
      height: auto;
      max-height: 75vh;
      object-fit: contain;
      display: block;
      image-rendering: -webkit-optimize-contrast;
      image-rendering: crisp-edges;
      filter: drop-shadow(0 25px 60px rgba(197, 29, 52, 0.5));
      z-index: 2;
      pointer-events: none;
      user-select: none;
      -webkit-user-drag: none;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
    }

    .auth-card {
      position: relative;
      z-index: 1;
      width: 100%;
      max-width: 420px;
      background: #ffffff;
      border-radius: 20px;
      padding: 40px 35px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08), 0 0 1px rgba(0, 0, 0, 0.05);
      border: 1px solid #f0f0f0;
      opacity: 0;
      transform: translateY(30px);
      animation: fadeUp 0.8s ease forwards !important;
      animation-delay: 0.2s !important;
      animation-play-state: running !important;
      justify-self: end;
      margin-left: auto;
      box-sizing: border-box;
    }

    @keyframes fadeUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .auth-header {
      text-align: center;
      margin-bottom: 28px;
      position: relative;
      z-index: 1;
    }

    .auth-icon {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 60px;
      height: 60px;
      border-radius: 16px;
      background: linear-gradient(135deg, var(--red), #d62839);
      color: white;
      font-size: 1.75rem;
      margin-bottom: 14px;
      box-shadow: 0 18px 40px rgba(197, 29, 52, 0.3);
      animation: iconBounce 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) 0.4s both;
    }

    @keyframes iconBounce {
      0% {
        transform: scale(0) rotate(-180deg);
        opacity: 0;
      }
      50% {
        transform: scale(1.1) rotate(10deg);
      }
      100% {
        transform: scale(1) rotate(0deg);
        opacity: 1;
      }
    }

    .auth-card h2 {
      font-size: 1.8rem;
      font-weight: 800;
      color: #2e2e30;
      margin: 0 0 6px;
      letter-spacing: -0.5px;
    }

    .auth-card h2 .highlight {
      background: linear-gradient(135deg, var(--red), #d62839);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .auth-subtitle {
      color: #9ca3af;
      font-size: 0.9rem;
      line-height: 1.4;
      margin: 0 0 24px;
      letter-spacing: 0.3px;
    }

    .staff-login-form {
      margin-top: 2rem !important;
      position: relative !important;
      z-index: 1 !important;
      opacity: 1 !important;
      visibility: visible !important;
      display: block !important;
      width: 100% !important;
      max-width: 100% !important;
      animation: none !important;
      animation-play-state: running !important;
    }

    .staff-login-form .form-group,
    .auth-card .form-group {
      margin-bottom: 18px !important;
      position: relative !important;
      opacity: 1 !important;
      visibility: visible !important;
      display: block !important;
      width: 100% !important;
      text-align: left !important;
      animation: none !important;
      animation-play-state: running !important;
    }

    .staff-login-form .form-group label,
    .auth-card .form-group label {
      display: block !important;
      margin-bottom: 8px !important;
      font-weight: 600 !important;
      color: #2e2e30 !important;
      font-size: 0.85rem !important;
      visibility: visible !important;
      opacity: 1 !important;
      text-align: left !important;
      letter-spacing: 0.3px !important;
    }

    .staff-login-form .form-control,
    .auth-card .form-control,
    input.form-control[type="email"],
    input.form-control[type="password"] {
      width: 100% !important;
      padding: 11px 14px !important;
      border: 1px solid #d1d5db !important;
      border-radius: 8px !important;
      font-size: 0.95rem !important;
      transition: all 0.2s ease !important;
      box-sizing: border-box !important;
      background: #ffffff !important;
      background-color: #ffffff !important;
      color: #1f2937 !important;
      -webkit-text-fill-color: #1f2937 !important;
      display: block !important;
      visibility: visible !important;
      opacity: 1 !important;
      margin: 0 !important;
      line-height: 1.6 !important;
      font-family: inherit !important;
    }

    .form-control::placeholder {
      color: #9ca3af !important;
      opacity: 1;
    }

    .staff-login-form .form-control:focus,
    .auth-card .form-control:focus,
    input.form-control[type="email"]:focus,
    input.form-control[type="password"]:focus {
      outline: none !important;
      border-color: var(--red) !important;
      box-shadow: 0 0 0 4px rgba(197, 29, 52, 0.1) !important;
      transform: translateY(-1px) !important;
      color: #000000 !important;
      -webkit-text-fill-color: #000000 !important;
      background: #ffffff !important;
      background-color: #ffffff !important;
      opacity: 1 !important;
      visibility: visible !important;
    }

    .form-control:-webkit-autofill,
    .form-control:-webkit-autofill:hover,
    .form-control:-webkit-autofill:focus {
      -webkit-text-fill-color: #000000 !important;
      -webkit-box-shadow: 0 0 0px 1000px #ffffff inset !important;
      box-shadow: 0 0 0px 1000px #ffffff inset !important;
      background-color: #ffffff !important;
    }

    .password-input-wrapper {
      position: relative;
      width: 100%;
    }

    .password-toggle {
      position: absolute;
      right: 12px;
      top: 50%;
      transform: translateY(-50%);
      background: none;
      border: none;
      color: #6b7280;
      cursor: pointer;
      padding: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: color 0.3s ease;
      z-index: 2;
      min-width: 44px;
      min-height: 44px;
      touch-action: manipulation;
      -webkit-tap-highlight-color: transparent;
    }

    .password-toggle:hover {
      color: var(--red);
    }

    .password-toggle:focus {
      outline: none;
    }

    .password-input-wrapper {
      display: block !important;
      width: 100% !important;
      position: relative !important;
    }

    .password-input-wrapper .form-control {
      width: 100% !important;
      padding-right: 42px !important;
      padding-left: 14px !important;
    }

    .btn-primary {
      background: var(--red) !important;
      color: white !important;
      border: none !important;
      padding: 12px 24px !important;
      border-radius: 10px !important;
      font-size: 0.95rem !important;
      font-weight: 600 !important;
      cursor: pointer !important;
      transition: all 0.2s ease !important;
      box-shadow: 0 4px 12px rgba(197, 29, 52, 0.25) !important;
      position: relative !important;
      overflow: hidden !important;
      letter-spacing: 0.2px !important;
      min-height: 44px !important;
      touch-action: manipulation !important;
      -webkit-tap-highlight-color: transparent !important;
    }

    .btn-primary:hover {
      background: #a01828 !important;
      transform: translateY(-2px) !important;
      box-shadow: 0 6px 20px rgba(197, 29, 52, 0.35) !important;
    }

    .btn-primary:active {
      transform: translateY(0) !important;
    }

    .btn-block {
      width: 100% !important;
      margin-top: 24px !important;
    }

    .btn-block .btn-primary {
      width: 100% !important;
      display: flex !important;
      align-items: center !important;
      justify-content: center !important;
      gap: 8px !important;
    }

    .alert {
      padding: 1rem;
      border-radius: 12px;
      margin-bottom: 1.5rem;
      border: 2px solid;
    }

    .alert-danger {
      background-color: #fee;
      color: #c00;
      border-color: #fcc;
    }

    .auth-footer {
      text-align: center;
      margin-top: clamp(18px, 3vh, 26px);
      padding-top: clamp(16px, 2vh, 22px);
      border-top: 1px solid rgba(197, 29, 52, 0.1);
    }

    .auth-footer p {
      font-size: 0.85rem;
      color: rgba(60, 60, 80, 0.7);
      margin: 0;
      line-height: 1.5;
    }

    .auth-footer a {
      color: var(--red);
      font-weight: 600;
      text-decoration: none;
      transition: all 0.3s ease;
      position: relative;
    }

    .auth-footer a::after {
      content: '';
      position: absolute;
      bottom: -2px;
      left: 0;
      width: 0;
      height: 2px;
      background: var(--red);
      transition: width 0.3s ease;
    }

    .auth-footer a:hover::after {
      width: 100%;
    }

    .auth-footer a:hover {
      color: #a01828;
    }

    .flying-tech-icons {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
      z-index: 0;
      pointer-events: none;
    }

    .flying-tech-icons i {
      position: absolute;
      font-size: 2.5rem;
      color: var(--red);
      opacity: 0;
      left: -100px;
      animation: flyLeftToRight 6s linear infinite, glowBlink 1.5s ease-in-out infinite;
      filter: drop-shadow(0 0 10px rgba(197, 29, 52, 0.3));
    }

    /* Stagger the icons with different delays and vertical positions */
    .flying-tech-icons i:nth-child(1) { top: 8%; animation-delay: 0s, 0s; }
    .flying-tech-icons i:nth-child(2) { top: 15%; animation-delay: 1s, 0.3s; }
    .flying-tech-icons i:nth-child(3) { top: 25%; animation-delay: 2s, 0.6s; }
    .flying-tech-icons i:nth-child(4) { top: 35%; animation-delay: 0.5s, 0.9s; }
    .flying-tech-icons i:nth-child(5) { top: 45%; animation-delay: 1.5s, 1.2s; }
    .flying-tech-icons i:nth-child(6) { top: 55%; animation-delay: 2.5s, 1.5s; }
    .flying-tech-icons i:nth-child(7) { top: 65%; animation-delay: 3s, 0.2s; }
    .flying-tech-icons i:nth-child(8) { top: 75%; animation-delay: 3.5s, 0.5s; }
    .flying-tech-icons i:nth-child(9) { top: 85%; animation-delay: 1.2s, 0.8s; }
    .flying-tech-icons i:nth-child(10) { top: 12%; animation-delay: 2.2s, 1.1s; }
    .flying-tech-icons i:nth-child(11) { top: 20%; animation-delay: 0.8s, 1.4s; }
    .flying-tech-icons i:nth-child(12) { top: 30%; animation-delay: 1.8s, 1.7s; }
    .flying-tech-icons i:nth-child(13) { top: 40%; animation-delay: 2.8s, 0.4s; }
    .flying-tech-icons i:nth-child(14) { top: 50%; animation-delay: 3.8s, 0.7s; }
    .flying-tech-icons i:nth-child(15) { top: 60%; animation-delay: 0.3s, 1s; }
    .flying-tech-icons i:nth-child(16) { top: 70%; animation-delay: 1.4s, 1.3s; }
    .flying-tech-icons i:nth-child(17) { top: 80%; animation-delay: 2.4s, 1.6s; }
    .flying-tech-icons i:nth-child(18) { top: 90%; animation-delay: 3.4s, 1.9s; }
    .flying-tech-icons i:nth-child(19) { top: 18%; animation-delay: 4s, 0.1s; }
    .flying-tech-icons i:nth-child(20) { top: 28%; animation-delay: 0.9s, 0.3s; }
    .flying-tech-icons i:nth-child(21) { top: 38%; animation-delay: 1.9s, 0.6s; }
    .flying-tech-icons i:nth-child(22) { top: 48%; animation-delay: 2.9s, 0.9s; }
    .flying-tech-icons i:nth-child(23) { top: 58%; animation-delay: 3.9s, 1.2s; }
    .flying-tech-icons i:nth-child(24) { top: 68%; animation-delay: 0.6s, 1.5s; }
    .flying-tech-icons i:nth-child(25) { top: 78%; animation-delay: 1.6s, 0.2s; }
    .flying-tech-icons i:nth-child(26) { top: 88%; animation-delay: 2.6s, 0.5s; }
    .flying-tech-icons i:nth-child(27) { top: 22%; animation-delay: 3.6s, 0.8s; }
    .flying-tech-icons i:nth-child(28) { top: 32%; animation-delay: 4.2s, 1.1s; }

    /* Alternate colors for variety */
    .flying-tech-icons i:nth-child(odd) {
      color: var(--red);
      filter: drop-shadow(0 0 10px rgba(197, 29, 52, 0.3));
    }

    .flying-tech-icons i:nth-child(even) {
      color: #4285F4;
      filter: drop-shadow(0 0 10px rgba(66, 133, 244, 0.3));
    }

    .flying-tech-icons i:nth-child(3n) {
      color: #1877F2;
      filter: drop-shadow(0 0 15px rgba(24, 119, 242, 0.4));
    }

    @keyframes flyLeftToRight {
      0% {
        left: -100px;
        opacity: 0;
        transform: translateY(0) rotate(0deg);
      }
      10% {
        opacity: 0.3;
      }
      50% {
        opacity: 0.5;
        transform: translateY(-20px) rotate(180deg);
      }
      90% {
        opacity: 0.3;
      }
      100% {
        left: calc(100% + 100px);
        opacity: 0;
        transform: translateY(0) rotate(360deg);
      }
    }

    @keyframes glowBlink {
      0%, 100% {
        filter: drop-shadow(0 0 8px currentColor) brightness(1);
      }
      50% {
        filter: drop-shadow(0 0 25px currentColor) brightness(1.8);
      }
    }

    @media (max-width: 1440px) {
      .auth-container {
        max-width: 1400px;
        gap: clamp(40px, 6vw, 80px);
      }

      .work-quote {
        right: -250px;
        max-width: 300px;
      }
    }

    @media (max-width: 1024px) {
      .auth-container {
        grid-template-columns: 1fr;
        gap: clamp(40px, 6vh, 60px);
        padding: clamp(40px, 6vh, 60px) clamp(24px, 5vw, 40px);
        min-height: auto;
      }

      .auth-image-section {
        order: -1;
        max-width: 450px;
        margin: 0 auto;
        height: auto;
      }

      .auth-image-wrapper {
        max-width: 400px;
        max-height: 60vh;
      }

      .auth-image {
        max-height: 60vh;
      }

      .auth-card {
        margin: 0 auto;
        max-width: 500px;
        padding: clamp(36px, 5vh, 40px) clamp(32px, 5vw, 35px);
        justify-self: center;
      }

      .work-quote {
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        right: auto;
        max-width: 90%;
        font-size: clamp(1rem, 2vw, 1.2rem);
        padding: 16px 24px;
      }
    }

    @media (max-width: 768px) {
      .auth-container {
        padding: clamp(30px, 5vh, 40px) clamp(20px, 4vw, 24px);
        min-height: auto;
        gap: clamp(30px, 5vh, 40px);
      }

      .auth-image-section {
        display: none;
      }

      .auth-card {
        padding: clamp(28px, 4vh, 32px) clamp(24px, 4vw, 28px);
        border-radius: 20px;
        margin-bottom: 0;
        max-width: 100%;
      }

      .auth-header {
        margin-bottom: clamp(20px, 3vh, 28px);
      }

      .flying-tech-icons i {
        font-size: 1.8rem;
        animation: flyLeftToRight 5s linear infinite, glowBlink 1.5s ease-in-out infinite;
      }

      .auth-icon {
        width: 56px;
        height: 56px;
        font-size: 1.6rem;
        margin-bottom: 14px;
      }

      .auth-card h2 {
        font-size: clamp(1.5rem, 4vw, 1.8rem);
        margin-bottom: 6px;
      }

      .auth-subtitle {
        font-size: clamp(0.85rem, 2vw, 0.95rem);
        margin-bottom: clamp(20px, 3vh, 24px);
      }

      .staff-login-form {
        margin-top: clamp(20px, 3vh, 24px) !important;
      }

      .staff-login-form .form-group,
      .auth-card .form-group {
        margin-bottom: clamp(16px, 2vh, 18px) !important;
      }

      .staff-login-form .form-group label,
      .auth-card .form-group label {
        font-size: clamp(0.8rem, 1.8vw, 0.85rem) !important;
        margin-bottom: 8px !important;
      }

      .staff-login-form .form-control,
      .auth-card .form-control,
      input.form-control[type="email"],
      input.form-control[type="password"] {
        padding: clamp(10px, 1.5vh, 11px) clamp(12px, 2vw, 14px) !important;
        font-size: clamp(0.9rem, 2vw, 0.95rem) !important;
        border-radius: 8px !important;
      }

      .password-toggle {
        right: 10px;
        padding: 6px;
      }

      .btn-primary {
        padding: clamp(11px, 1.5vh, 12px) clamp(20px, 3vw, 24px) !important;
        font-size: clamp(0.9rem, 2vw, 0.95rem) !important;
        border-radius: 10px !important;
      }

      .btn-block {
        margin-top: clamp(20px, 3vh, 24px) !important;
      }

      .alert {
        padding: clamp(0.75rem, 1.5vh, 1rem);
        border-radius: 10px;
        margin-bottom: clamp(1.25rem, 2vh, 1.5rem);
        font-size: clamp(0.85rem, 2vw, 0.9rem);
      }

      .auth-footer {
        margin-top: clamp(16px, 3vh, 24px);
        padding-top: clamp(14px, 2vh, 20px);
      }

      .auth-footer p {
        font-size: clamp(0.8rem, 1.8vw, 0.85rem);
      }

      .work-quote {
        font-size: clamp(0.95rem, 2vw, 1.1rem);
        padding: 12px 18px;
        bottom: 15px;
        max-width: calc(100% - 40px);
      }

      .work-quote-text {
        font-size: 1em;
        margin-bottom: 10px;
      }

      .work-quote-author {
        font-size: 0.9em;
      }
    }

    @media (max-width: 480px) {
      .auth-container {
        padding: 24px 16px;
        gap: 24px;
      }

      .auth-card {
        padding: 24px 20px;
        border-radius: 18px;
      }

      .auth-icon {
        width: 52px;
        height: 52px;
        font-size: 1.5rem;
        margin-bottom: 12px;
      }

      .auth-card h2 {
        font-size: 1.5rem;
      }

      .auth-subtitle {
        font-size: 0.85rem;
        margin-bottom: 20px;
      }

      .staff-login-form {
        margin-top: 20px !important;
      }

      .staff-login-form .form-group,
      .auth-card .form-group {
        margin-bottom: 16px !important;
      }

      .staff-login-form .form-group label,
      .auth-card .form-group label {
        font-size: 0.8rem !important;
      }

      .staff-login-form .form-control,
      .auth-card .form-control,
      input.form-control[type="email"],
      input.form-control[type="password"] {
        padding: 10px 12px !important;
        font-size: 0.9rem !important;
      }

      .password-toggle {
        right: 8px;
        padding: 5px;
      }

      .btn-primary {
        padding: 11px 20px !important;
        font-size: 0.9rem !important;
      }

      .btn-block {
        margin-top: 20px !important;
      }

      .alert {
        padding: 0.75rem;
        font-size: 0.85rem;
        margin-bottom: 1.25rem;
      }

      .auth-footer {
        margin-top: 20px;
        padding-top: 16px;
      }

      .auth-footer p {
        font-size: 0.8rem;
        line-height: 1.4;
      }

      .work-quote {
        font-size: 0.95rem;
        padding: 10px 16px;
        bottom: 10px;
      }
    }

    @media (max-width: 360px) {
      .auth-container {
        padding: 20px 12px;
      }

      .auth-card {
        padding: 20px 16px;
      }

      .auth-card h2 {
        font-size: 1.4rem;
      }

      .staff-login-form .form-control,
      .auth-card .form-control {
        padding: 9px 10px !important;
        font-size: 0.85rem !important;
      }

      .btn-primary {
        padding: 10px 18px !important;
        font-size: 0.85rem !important;
      }
    }

    /* Landscape orientation for mobile */
    @media (max-width: 768px) and (orientation: landscape) {
      .auth-container {
        min-height: auto;
        padding: 20px;
        gap: 20px;
      }

      .auth-card {
        padding: 24px 20px;
      }

      .auth-image-section {
        display: none;
      }

      .work-quote {
        display: none;
      }
    }
  </style>
</head>
<body>
  <%- include('../partials/header') %>

  <div class="auth-container">
    <div class="flying-tech-icons">
      <i class="fab fa-react"></i>
      <i class="fab fa-python"></i>
      <i class="fab fa-js-square"></i>
      <i class="fab fa-node-js"></i>
      <i class="fab fa-html5"></i>
      <i class="fab fa-css3-alt"></i>
      <i class="fab fa-vuejs"></i>
      <i class="fab fa-angular"></i>
      <i class="fab fa-java"></i>
      <i class="fab fa-php"></i>
      <i class="fab fa-laravel"></i>
      <i class="fab fa-swift"></i>
      <i class="fab fa-android"></i>
      <i class="fas fa-database"></i>
      <i class="fab fa-git-alt"></i>
      <i class="fab fa-github"></i>
      <i class="fab fa-npm"></i>
      <i class="fab fa-bootstrap"></i>
      <i class="fab fa-docker"></i>
      <i class="fab fa-aws"></i>
      <i class="fas fa-code"></i>
      <i class="fas fa-server"></i>
      <i class="fab fa-sass"></i>
      <i class="fab fa-wordpress"></i>
      <i class="fab fa-figma"></i>
      <i class="fas fa-mobile-alt"></i>
      <i class="fas fa-laptop-code"></i>
      <i class="fas fa-cloud"></i>
    </div>

    <div class="auth-image-section">
      <div class="auth-image-wrapper">
        <img src="/images/Assets/Staff Login.webp" alt="Staff Login Illustration" class="auth-image" draggable="false" oncontextmenu="return false;">
        <div class="image-protection-overlay"></div>
        <div class="work-quote" id="workQuote">
          <div class="work-quote-text" id="quoteText"></div>
          <div class="work-quote-author" id="quoteAuthor"></div>
        </div>
      </div>
    </div>

    <div class="auth-card">
      <div class="auth-header">
        <div class="auth-icon">
          <i class="fas fa-user-shield"></i>
        </div>
        <h2>Staff <span class="highlight">Login</span></h2>
        <p class="auth-subtitle">Admin & Team Member Access</p>
      </div>
      
      <% if (error_msg && error_msg.length > 0) { %>
        <div class="alert alert-danger">
          <%= error_msg %>
        </div>
      <% } %>
      
      <% if (error && error.length > 0) { %>
        <div class="alert alert-danger">
          <%= error %>
        </div>
      <% } %>

      <form action="/staff/login" method="POST" class="staff-login-form">
        <div class="form-group">
          <label for="email">Email Address</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            class="form-control" 
            placeholder="Enter your email"
            required
            autocomplete="email"
          >
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <div class="password-input-wrapper">
            <input 
              type="password" 
              id="password" 
              name="password" 
              class="form-control" 
              placeholder="Enter your password"
              required
              autocomplete="current-password"
            >
            <button type="button" class="password-toggle" id="passwordToggle" aria-label="Toggle password visibility">
              <i class="fas fa-eye" id="passwordIcon"></i>
            </button>
          </div>
        </div>

        <button type="submit" class="btn btn-primary btn-block">
          <i class="fas fa-sign-in-alt"></i>
          <span>Sign In</span>
        </button>
      </form>

      <div class="auth-footer">
        <p>Looking for client access? <a href="/auth/login">Click here</a></p>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>
  
  <script>

    const workQuotes = [
      { quote: "Excellence is not a skill, it's an attitude", author: "Ralph Marston" },
      { quote: "Work hard in silence, let success make the noise", author: "Frank Ocean" },
      { quote: "The only way to do great work is to love what you do", author: "Steve Jobs" },
      { quote: "Success is the sum of small efforts repeated day in and day out", author: "Robert Collier" },
      { quote: "Innovation distinguishes between a leader and a follower", author: "Steve Jobs" },
      { quote: "Quality is not an act, it is a habit", author: "Aristotle" },
      { quote: "The future belongs to those who believe in the beauty of their dreams", author: "Eleanor Roosevelt" },
      { quote: "Teamwork makes the dream work", author: "John C. Maxwell" },
      { quote: "Excellence is never an accident", author: "Aristotle" },
      { quote: "Do what you do so well that they will want to see it again", author: "Walt Disney" },
      { quote: "The best way to predict the future is to create it", author: "Peter Drucker" },
      { quote: "Success is walking from failure to failure with no loss of enthusiasm", author: "Winston Churchill" },
      { quote: "Great things in business are never done by one person", author: "Steve Jobs" },
      { quote: "The secret of getting ahead is getting started", author: "Mark Twain" },
      { quote: "Innovation is the ability to see change as an opportunity", author: "Peter Drucker" }
    ];


    const quoteTextElement = document.getElementById('quoteText');
    const quoteAuthorElement = document.getElementById('quoteAuthor');
    if (quoteTextElement && quoteAuthorElement) {
      const randomQuoteData = workQuotes[Math.floor(Math.random() * workQuotes.length)];
      quoteTextElement.textContent = randomQuoteData.quote;
      quoteAuthorElement.textContent = `â€” ${randomQuoteData.author}`;
    }


    const passwordToggle = document.getElementById('passwordToggle');
    const passwordInput = document.getElementById('password');
    const passwordIcon = document.getElementById('passwordIcon');

    if (passwordToggle && passwordInput && passwordIcon) {
      passwordToggle.addEventListener('click', function() {
        const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
        passwordInput.setAttribute('type', type);
        

        if (type === 'password') {
          passwordIcon.classList.remove('fa-eye-slash');
          passwordIcon.classList.add('fa-eye');
        } else {
          passwordIcon.classList.remove('fa-eye');
          passwordIcon.classList.add('fa-eye-slash');
        }
      });
    }


    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    document.querySelectorAll('section').forEach(section => observer.observe(section));


    const footer = document.querySelector('footer');
    if (footer) {
      footer.style.opacity = '1';
      footer.style.visibility = 'visible';
      footer.classList.add('visible');
    }


    const preventImageInteraction = (img) => {
      if (!img) return;
      

      ['dragstart', 'drag', 'dragend', 'dragover', 'dragenter', 'dragleave', 'drop'].forEach(eventType => {
        img.addEventListener(eventType, (e) => {
          e.preventDefault();
          e.stopPropagation();
          return false;
        }, { passive: false });
      });
      

      ['click', 'mousedown', 'mouseup', 'mousemove', 'dblclick'].forEach(eventType => {
        img.addEventListener(eventType, (e) => {
          e.preventDefault();
          e.stopPropagation();
          return false;
        }, { passive: false });
      });
      

      img.addEventListener('contextmenu', (e) => {
        e.preventDefault();
        e.stopPropagation();
        return false;
      }, { passive: false });
      

      ['selectstart', 'select', 'copy'].forEach(eventType => {
        img.addEventListener(eventType, (e) => {
          e.preventDefault();
          return false;
        }, { passive: false });
      });
      

      img.addEventListener('auxclick', (e) => {
        if (e.button === 1) {
          e.preventDefault();
          e.stopPropagation();
          return false;
        }
      }, { passive: false });
      

      img.style.pointerEvents = 'none';
      img.style.userSelect = 'none';
      img.style.webkitUserDrag = 'none';
      img.style.MozUserSelect = 'none';
      img.style.msUserSelect = 'none';
      img.setAttribute('draggable', 'false');
      img.setAttribute('oncontextmenu', 'return false;');
    };


    const protectImageContainer = (container) => {
      if (!container) return;
      
      ['dragstart', 'drag', 'dragend', 'dragover', 'dragenter', 'dragleave', 'drop',
       'click', 'mousedown', 'mouseup', 'mousemove', 'dblclick', 'contextmenu',
       'selectstart', 'select', 'copy', 'auxclick'].forEach(eventType => {
        container.addEventListener(eventType, (e) => {
          e.preventDefault();
          e.stopPropagation();
          e.stopImmediatePropagation();
          return false;
        }, { passive: false, capture: true });
      });
    };


    document.querySelectorAll('.auth-image').forEach(preventImageInteraction);
    

    document.querySelectorAll('.auth-image-wrapper, .image-protection-overlay').forEach(protectImageContainer);
    

    document.querySelectorAll('.auth-image-section').forEach(protectImageContainer);
  </script>
</body>
</html>



