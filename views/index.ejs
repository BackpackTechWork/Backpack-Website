    /* Hide content until CSS is loaded (only for JS-enabled browsers) */
    html.js-enabled:not(.css-loaded) body {
      visibility: hidden;
    }
    
    html.css-loaded body,
    html.no-js body {
      visibility: visible;
    }
    
