  <!-- Mark that JS is enabled (robots won't execute this, so they'll see content) -->
  <script>
    document.documentElement.classList.add('js-enabled');
    document.documentElement.classList.remove('no-js');
  </script>
  
  <!-- Optimized CSS loading detection - inline for immediate execution -->
  <script>
    (function() {
      function markCSSLoaded() {
        document.documentElement.classList.add('css-loaded');
      }
      
      var link = document.querySelector('link[href="/css/style.css"]');
      if (link) {
        if (link.sheet || link.styleSheet) {
          markCSSLoaded();
        } else if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', markCSSLoaded);
        } else {
          markCSSLoaded();
        }
        
        link.addEventListener('load', markCSSLoaded);
        link.addEventListener('error', markCSSLoaded); 
      } else {
        markCSSLoaded();
      }
    })();
  </script>
  
