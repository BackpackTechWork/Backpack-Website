  <style>
    /* Smooth scroll behavior - optimized for animations */
    html {
      scroll-behavior: smooth;
      scroll-padding-top: 80px;
    }
    
    /* Ensure smooth scrolling isn't blocked by animations */
    * {
      scroll-margin-top: 80px;
    }
    
    /* Optimize scroll performance during animations */
    html, body {
      will-change: scroll-position;
    }
    
    /* Ensure content is visible for no-JS users */
    html.no-js .legal-header,
    html.no-js .legal-content,
    html.no-js .legal-header-icon,
    html.no-js .legal-section,
    html.no-js .legal-highlight-box,
    html.no-js .legal-contact-info,
    html.no-js section,
    html.no-js footer {
      opacity: 1 !important;
      visibility: visible !important;
      transform: none !important;
      animation: none !important;
    }
    .legal-page {
      padding: clamp(80px, 10vh, 120px) 0 clamp(60px, 8vh, 100px);
      background: transparent;
      min-height: calc(100vh - 140px);
      position: relative;
      z-index: 1;
    }

    .legal-container {
      max-width: 900px;
      margin: 0 auto;
      padding: 0 clamp(20px, 5vw, 48px);
    }

    .legal-header {
      text-align: center;
      margin-bottom: clamp(40px, 6vh, 60px);
      opacity: 0;
      transform: translateY(30px);
      animation: fadeUp 0.8s ease forwards;
    }

    @keyframes fadeUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .legal-header-icon {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 80px;
      height: 80px;
      border-radius: 20px;
      background: linear-gradient(135deg, var(--red) 0%, #d62839 50%, #a01828 100%);
      color: var(--white);
      font-size: 2rem;
      margin-bottom: 24px;
      box-shadow: 0 20px 50px rgba(197, 29, 52, 0.3);
      animation: iconBounce 0.8s ease 0.2s both;
    }

    @keyframes iconBounce {
      0% {
        transform: scale(0) rotate(-180deg);
        opacity: 0;
      }
      50% {
        transform: scale(1.1) rotate(10deg);
      }
      100% {
        transform: scale(1) rotate(0deg);
        opacity: 1;
      }
    }

    .legal-header h1 {
      font-size: clamp(2.5rem, 5vw, 3.5rem);
      font-weight: 800;
      color: var(--dark-gray);
      margin-bottom: 16px;
      line-height: 1.2;
    }

    .legal-header h1 .highlight {
      background: linear-gradient(135deg, var(--red), #d62839);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .legal-header p {
      font-size: 1.1rem;
      color: var(--gray);
      max-width: 600px;
      margin: 0 auto;
      line-height: 1.7;
    }

    .legal-last-updated {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 8px 16px;
      background: rgba(197, 29, 52, 0.08);
      border-radius: 20px;
      font-size: 0.9rem;
      color: var(--dark-gray);
      margin-top: 20px;
    }

    .legal-content {
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(253, 251, 247, 0.98) 100%);
      border: 2px solid rgba(197, 29, 52, 0.08);
      border-radius: 24px;
      padding: clamp(32px, 5vw, 48px);
      box-shadow: 0 28px 50px rgba(20, 20, 40, 0.1);
      backdrop-filter: blur(20px);
      opacity: 0;
      transform: translateY(30px);
      animation: fadeUp 0.8s ease forwards;
      animation-delay: 0.3s;
      position: relative;
      z-index: 1;
    }

    .legal-content::before {
      content: '';
      position: absolute;
      inset: 0;
      background: radial-gradient(circle at top right, rgba(197, 29, 52, 0.1), transparent 55%);
      border-radius: 24px;
      pointer-events: none;
    }

    .legal-section {
      margin-bottom: clamp(32px, 5vh, 48px);
      position: relative;
      z-index: 1;
    }

    .legal-section:last-child {
      margin-bottom: 0;
    }

    .legal-section h2 {
      font-size: clamp(1.5rem, 3vw, 2rem);
      font-weight: 700;
      color: var(--dark-gray);
      margin-bottom: 16px;
      padding-bottom: 12px;
      border-bottom: 2px solid rgba(197, 29, 52, 0.15);
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .legal-section h2 i {
      color: var(--red);
      font-size: 1.2em;
    }

    .legal-section h3 {
      font-size: clamp(1.2rem, 2.5vw, 1.5rem);
      font-weight: 600;
      color: var(--dark-gray);
      margin-top: 24px;
      margin-bottom: 12px;
    }

    .legal-section p {
      font-size: 1rem;
      line-height: 1.8;
      color: var(--gray);
      margin-bottom: 16px;
    }

    .legal-section ul,
    .legal-section ol {
      margin: 16px 0;
      padding-left: 24px;
    }

    .legal-section li {
      font-size: 1rem;
      line-height: 1.8;
      color: var(--gray);
      margin-bottom: 12px;
    }

    .legal-section li strong {
      color: var(--dark-gray);
      font-weight: 600;
    }

    .legal-highlight-box {
      background: linear-gradient(135deg, rgba(197, 29, 52, 0.08), rgba(197, 29, 52, 0.04));
      border-left: 4px solid var(--red);
      border-radius: 12px;
      padding: 20px 24px;
      margin: 24px 0;
    }

    .legal-highlight-box p {
      margin: 0;
      color: var(--dark-gray);
      font-weight: 500;
    }

    .legal-contact-info {
      background: linear-gradient(135deg, rgba(197, 29, 52, 0.1), rgba(197, 29, 52, 0.05));
      border-radius: 16px;
      padding: 24px;
      margin-top: 32px;
      text-align: center;
    }

    .legal-contact-info h3 {
      margin-top: 0;
      margin-bottom: 12px;
      color: var(--dark-gray);
    }

    .legal-contact-info p {
      margin-bottom: 8px;
      color: var(--gray);
    }

    .legal-contact-info a {
      color: var(--red);
      text-decoration: none;
      font-weight: 600;
      transition: color 0.3s ease;
    }

    .legal-contact-info a:hover {
      color: #a01828;
      text-decoration: underline;
    }

    @media (max-width: 768px) {
      .legal-page {
        padding: clamp(60px, 8vh, 80px) 0 clamp(40px, 6vh, 60px);
      }

