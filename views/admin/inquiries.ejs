        <div class="bulk-actions-info">
          <span id="selectedCount">0</span> inquiry/inquiries selected
        </div>
        <div class="bulk-actions-controls">
          <select id="bulkStatusSelect" class="bulk-status-select">
            <option value="">Change Status To...</option>
            <option value="new">New</option>
            <option value="in_progress">In Progress</option>
            <option value="resolved">Resolved</option>
          </select>
          <button class="btn btn-primary btn-sm" id="bulkUpdateBtn">
            <i class="fas fa-check"></i> Update
          </button>
        </div>
      </div>

      <div class="table-container">
        <% if (inquiries && inquiries.length > 0) { %>
          <!-- Desktop Table View -->
          <div class="table-wrapper">
            <table class="table">
              <thead>
                <tr>
                  <th class="checkbox-column">
                    <input type="checkbox" id="selectAll" class="checkbox-input">
                  </th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Subject</th>
                  <th>Message</th>
                  <th>Status</th>
                  <th>Date</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% inquiries.forEach(inquiry => { %>
                  <tr data-inquiry-id="<%= inquiry.id %>">
                    <td class="checkbox-column">
                      <input type="checkbox" class="checkbox-input inquiry-checkbox" value="<%= inquiry.id %>">
                    </td>
                  <td style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; max-width: 150px;"><%= inquiry.user_name || inquiry.name || 'Guest' %></td>
                  <td style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; max-width: 200px;"><%= inquiry.email %></td>
                  <td style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; max-width: 200px;"><%= inquiry.subject %></td>
                  <td>
                    <div 
                      class="inquiry-message view-message-btn" 
                      title="Click to view full message"
                      style="max-width: 250px;"
                      data-inquiry-id="<%= inquiry.id %>"
                      data-subject="<%= inquiry.subject %>"
                      data-name="<%= inquiry.user_name || inquiry.name || 'Guest' %>"
                      data-email="<%= inquiry.email %>"
                      data-date="<%= new Date(inquiry.created_at).toLocaleDateString() %>"
                      data-message="<%= inquiry.message.replace(/"/g, '&quot;').replace(/'/g, '&#39;') %>"
                    >
                      <%= inquiry.message %>
                    </div>
                  </td>
                    <td>
                      <select class="select-status" data-inquiry-id="<%= inquiry.id %>" data-current-status="<%= inquiry.status || 'new' %>">
                        <option value="new" <%= (inquiry.status || 'new') === 'new' ? 'selected' : '' %>>New</option>
                        <option value="in_progress" <%= inquiry.status === 'in_progress' ? 'selected' : '' %>>In Progress</option>
                        <option value="resolved" <%= inquiry.status === 'resolved' ? 'selected' : '' %>>Resolved</option>
                      </select>
                    </td>
                    <td><%= new Date(inquiry.created_at).toLocaleDateString() %></td>
                    <td>
                      <div class="action-buttons">
                        <a 
                          href="mailto:<%= inquiry.email %>?subject=Re: <%= encodeURIComponent(inquiry.subject) %>&body=<%= encodeURIComponent('Hello ' + (inquiry.user_name || inquiry.name || 'there') + ',\n\nRegarding your inquiry: ' + inquiry.subject + '\n\n') %>" 
                          class="btn btn-email btn-sm btn-icon-only"
                          style="text-decoration: none; display: inline-flex;"
                          title="Email client"
                        >
                          <i class="fas fa-envelope"></i>
                        </a>
                        <button class="btn btn-danger btn-sm btn-icon-only delete-inquiry" data-inquiry-id="<%= inquiry.id %>" title="Delete Inquiry">
                          <i class="fas fa-trash"></i>
                        </button>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>

          <!-- Mobile Card View -->
          <div class="mobile-card-view">
            <div class="mobile-select-all-bar">
              <input type="checkbox" id="selectAllMobile" class="checkbox-input">
              <label for="selectAllMobile" class="mobile-select-all-label">Select All Inquiries</label>
            </div>
            <% inquiries.forEach(inquiry => { %>
              <div class="mobile-card" data-inquiry-id="<%= inquiry.id %>">
                <div class="mobile-card-header">
                  <div class="mobile-card-checkbox">
                    <input type="checkbox" class="checkbox-input inquiry-checkbox" value="<%= inquiry.id %>">
                  </div>
                  <div class="mobile-card-title">
                    <h3><%= inquiry.subject %></h3>
                    <p><%= inquiry.user_name || inquiry.name || 'Guest' %></p>
                  </div>
                </div>
                <div class="mobile-card-body">
                  <div class="mobile-card-row">
                    <span class="mobile-card-label">Email:</span>
                    <span class="mobile-card-value"><%= inquiry.email %></span>
                  </div>
                  <div class="mobile-card-row mobile-card-status-row">
                    <span class="mobile-card-label">Status:</span>
                    <span class="mobile-card-value" style="width: 100%;">
                      <select class="select-status mobile-status-select" data-inquiry-id="<%= inquiry.id %>" data-current-status="<%= inquiry.status || 'new' %>">
                        <option value="new" <%= (inquiry.status || 'new') === 'new' ? 'selected' : '' %>>New</option>
                        <option value="in_progress" <%= inquiry.status === 'in_progress' ? 'selected' : '' %>>In Progress</option>
                        <option value="resolved" <%= inquiry.status === 'resolved' ? 'selected' : '' %>>Resolved</option>
                      </select>
                    </span>
                  </div>
                  <div class="mobile-card-row">
                    <span class="mobile-card-label">Date:</span>
                    <span class="mobile-card-value"><%= new Date(inquiry.created_at).toLocaleDateString() %></span>
                  </div>
                  <div class="mobile-card-message">
                    <div class="mobile-card-message-label">Message:</div>
                    <div 
                      class="mobile-card-message-text view-message-btn" 
                      style="cursor: pointer;"
                      data-inquiry-id="<%= inquiry.id %>"
                      data-subject="<%= inquiry.subject %>"
                      data-name="<%= inquiry.user_name || inquiry.name || 'Guest' %>"
                      data-email="<%= inquiry.email %>"
                      data-date="<%= new Date(inquiry.created_at).toLocaleDateString() %>"
                      data-message="<%= inquiry.message.replace(/"/g, '&quot;').replace(/'/g, '&#39;') %>"
                    >
                      <%= inquiry.message.length > 150 ? inquiry.message.substring(0, 150) + '...' : inquiry.message %>
                    </div>
                    <div 
                      class="view-message-btn" 
                      style="margin-top: 0.5rem; cursor: pointer;"
                      data-inquiry-id="<%= inquiry.id %>"
                      data-subject="<%= inquiry.subject %>"
                      data-name="<%= inquiry.user_name || inquiry.name || 'Guest' %>"
                      data-email="<%= inquiry.email %>"
                      data-date="<%= new Date(inquiry.created_at).toLocaleDateString() %>"
                      data-message="<%= inquiry.message.replace(/"/g, '&quot;').replace(/'/g, '&#39;') %>"
                    >
                      <span style="color: var(--accent-red); font-weight: 600; font-size: 0.75rem;">
                        <i class="fas fa-eye"></i> Click to view full message
                      </span>
                    </div>
                  </div>
                </div>
                <div class="mobile-card-actions">
                  <a 
                    href="mailto:<%= inquiry.email %>?subject=Re: <%= encodeURIComponent(inquiry.subject) %>&body=<%= encodeURIComponent('Hello ' + (inquiry.user_name || inquiry.name || 'there') + ',\n\nRegarding your inquiry: ' + inquiry.subject + '\n\n') %>" 
                    class="btn btn-email btn-sm"
                    title="Email client"
                    style="flex: 1; text-decoration: none; display: inline-flex; justify-content: center;"
                  >
                    <i class="fas fa-envelope"></i>
                    <span>Email</span>
                  </a>
                  <button class="btn btn-danger btn-sm delete-inquiry" data-inquiry-id="<%= inquiry.id %>" title="Delete Inquiry" style="flex: 1;">
                    <i class="fas fa-trash"></i>
                    <span>Delete</span>
                  </button>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="empty-state">
            <i class="fas fa-inbox"></i>
            <p>No inquiries found</p>
          </div>
        <% } %>
      </div>

      <!-- Pagination -->
      <% if (pagination && pagination.totalPages > 1) { %>
        <div class="pagination-container">
          <div class="pagination-info">
            Showing <%= ((pagination.currentPage - 1) * pagination.limit) + 1 %> to <%= Math.min(pagination.currentPage * pagination.limit, pagination.totalCount) %> of <%= pagination.totalCount %> results
          </div>
          <div class="pagination">
            <% 
              const buildQuery = (page) => {
                const params = [];
                if (filters.search) params.push(`search=${encodeURIComponent(filters.search)}`);
                if (filters.date_from) params.push(`date_from=${encodeURIComponent(filters.date_from)}`);
                if (filters.date_to) params.push(`date_to=${encodeURIComponent(filters.date_to)}`);
                if (filters.status) params.push(`status=${encodeURIComponent(filters.status)}`);
                params.push(`page=${page}`);
                return params.length > 0 ? '?' + params.join('&') : '';
              };
            %>
            <% if (pagination.hasPrev) { %>
              <a href="/admin/inquiries<%= buildQuery(pagination.currentPage - 1) %>" class="pagination-btn">
                <i class="fas fa-chevron-left"></i>
              </a>
            <% } else { %>
              <span class="pagination-btn disabled">
                <i class="fas fa-chevron-left"></i>
              </span>
            <% } %>

            <% 
              let startPage = Math.max(1, pagination.currentPage - 2);
              let endPage = Math.min(pagination.totalPages, pagination.currentPage + 2);
              if (endPage - startPage < 4) {
                if (startPage === 1) {
                  endPage = Math.min(5, pagination.totalPages);
                } else {
                  startPage = Math.max(1, pagination.totalPages - 4);
                }
              }
            %>

            <% if (startPage > 1) { %>
              <a href="/admin/inquiries<%= buildQuery(1) %>" class="pagination-btn">1</a>
              <% if (startPage > 2) { %>
                <span class="pagination-ellipsis">...</span>
              <% } %>
            <% } %>

            <% for (let i = startPage; i <= endPage; i++) { %>
              <% if (i === pagination.currentPage) { %>
                <span class="pagination-btn active"><%= i %></span>
              <% } else { %>
                <a href="/admin/inquiries<%= buildQuery(i) %>" class="pagination-btn"><%= i %></a>
              <% } %>
            <% } %>

            <% if (endPage < pagination.totalPages) { %>
              <% if (endPage < pagination.totalPages - 1) { %>
                <span class="pagination-ellipsis">...</span>
              <% } %>
              <a href="/admin/inquiries<%= buildQuery(pagination.totalPages) %>" class="pagination-btn"><%= pagination.totalPages %></a>
            <% } %>

            <% if (pagination.hasNext) { %>
              <a href="/admin/inquiries<%= buildQuery(pagination.currentPage + 1) %>" class="pagination-btn">
                <i class="fas fa-chevron-right"></i>
              </a>
            <% } else { %>
              <span class="pagination-btn disabled">
                <i class="fas fa-chevron-right"></i>
              </span>
            <% } %>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <script>

    function showModal(modalId) {
      const modal = document.getElementById(modalId);
      if (modal) {
        modal.classList.add('show');
      }
    }

    function closeModal(modalId) {
      const modal = document.getElementById(modalId);
      if (modal) {
        modal.classList.remove('show');
      }
    }


    function showConfirmation(message, onConfirm) {
      const modal = document.getElementById('confirmationModal');
      const messageEl = document.getElementById('confirmationMessage');
      if (modal && messageEl) {
        messageEl.textContent = message;
        modal.classList.add('show');
        

        const confirmBtn = document.getElementById('confirmBtn');
        if (confirmBtn) {

          const newConfirmBtn = confirmBtn.cloneNode(true);
          confirmBtn.parentNode.replaceChild(newConfirmBtn, confirmBtn);
          
          newConfirmBtn.onclick = function() {
            closeModal('confirmationModal');
            if (onConfirm) onConfirm();
          };
        }
      }
    }


    const selectAllCheckbox = document.getElementById('selectAll');
    const selectAllMobileCheckbox = document.getElementById('selectAllMobile');
    const inquiryCheckboxes = document.querySelectorAll('.inquiry-checkbox');
    const bulkActions = document.getElementById('bulkActions');
    const selectedCountSpan = document.getElementById('selectedCount');
    const bulkStatusSelect = document.getElementById('bulkStatusSelect');
    const bulkUpdateBtn = document.getElementById('bulkUpdateBtn');

    function updateBulkActions() {
      const selected = document.querySelectorAll('.inquiry-checkbox:checked');

      const uniqueIds = new Set();
      selected.forEach(cb => {
        uniqueIds.add(cb.value);
      });
      const count = uniqueIds.size;
      
      selectedCountSpan.textContent = count;
      
      if (count > 0) {
        bulkActions.classList.add('active');

        inquiryCheckboxes.forEach(cb => {
          const row = cb.closest('tr');
          const card = cb.closest('.mobile-card');
          if (cb.checked) {
            if (row) row.classList.add('selected');
            if (card) card.classList.add('selected');
          } else {
            if (row) row.classList.remove('selected');
            if (card) card.classList.remove('selected');
          }
        });
      } else {
        bulkActions.classList.remove('active');
        inquiryCheckboxes.forEach(cb => {
          const row = cb.closest('tr');
          const card = cb.closest('.mobile-card');
          if (row) row.classList.remove('selected');
          if (card) card.classList.remove('selected');
        });
      }
    }

    function syncSelectAll() {
      const selected = document.querySelectorAll('.inquiry-checkbox:checked');

      const uniqueIds = new Set();
      selected.forEach(cb => {
        uniqueIds.add(cb.value);
      });
      const checkedCount = uniqueIds.size;
      

      const allIds = new Set();
      inquiryCheckboxes.forEach(cb => {
        allIds.add(cb.value);
      });
      const totalCount = allIds.size;
      
      if (checkedCount === 0) {
        if (selectAllCheckbox) {
          selectAllCheckbox.indeterminate = false;
          selectAllCheckbox.checked = false;
        }
        if (selectAllMobileCheckbox) {
          selectAllMobileCheckbox.indeterminate = false;
          selectAllMobileCheckbox.checked = false;
        }
      } else if (checkedCount === totalCount) {
        if (selectAllCheckbox) {
          selectAllCheckbox.indeterminate = false;
          selectAllCheckbox.checked = true;
        }
        if (selectAllMobileCheckbox) {
          selectAllMobileCheckbox.indeterminate = false;
          selectAllMobileCheckbox.checked = true;
        }
      } else {
        if (selectAllCheckbox) {
          selectAllCheckbox.indeterminate = true;
        }
        if (selectAllMobileCheckbox) {
          selectAllMobileCheckbox.indeterminate = true;
        }
      }
    }

    if (selectAllCheckbox) {
      selectAllCheckbox.addEventListener('change', function() {
        inquiryCheckboxes.forEach(cb => {
          cb.checked = this.checked;
        });
        updateBulkActions();
        syncSelectAll();
      });
    }

    if (selectAllMobileCheckbox) {
      selectAllMobileCheckbox.addEventListener('change', function() {
        inquiryCheckboxes.forEach(cb => {
          cb.checked = this.checked;
        });
        updateBulkActions();
        syncSelectAll();
      });
    }

    inquiryCheckboxes.forEach(cb => {
      cb.addEventListener('change', function() {

        const inquiryId = this.value;
        inquiryCheckboxes.forEach(otherCb => {
          if (otherCb.value === inquiryId && otherCb !== this) {
            otherCb.checked = this.checked;
          }
        });
        updateBulkActions();
        syncSelectAll();
      });
    });


    bulkUpdateBtn.addEventListener('click', async function() {
      const selectedStatus = bulkStatusSelect.value;
      if (!selectedStatus) {
        document.getElementById('errorMessage').textContent = 'Please select a status';
        showModal('errorModal');
        return;
      }


      const selectedCheckboxes = document.querySelectorAll('.inquiry-checkbox:checked');
      const uniqueIds = new Set();
      selectedCheckboxes.forEach(cb => {
        uniqueIds.add(parseInt(cb.value));
      });
      const selectedIds = Array.from(uniqueIds);

      if (selectedIds.length === 0) {
        document.getElementById('errorMessage').textContent = 'Please select at least one inquiry';
        showModal('errorModal');
        return;
      }

      const statusText = selectedStatus.replace('_', ' ');
      showConfirmation(`Update ${selectedIds.length} inquiry/inquiries to "${statusText}"?`, async function() {
        try {
          const response = await fetch('/admin/inquiries/bulk-status', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              inquiry_ids: selectedIds,
              status: selectedStatus
            })
          });

          const data = await response.json();

          if (data.success) {
            document.getElementById('successMessage').textContent = data.message;
            showModal('successModal');
            setTimeout(() => {
              location.reload();
            }, 1500);
          } else {
            document.getElementById('errorMessage').textContent = data.message || 'Error updating inquiries';
            showModal('errorModal');
          }
        } catch (error) {
          console.error('Error:', error);
          document.getElementById('errorMessage').textContent = 'An error occurred while updating inquiries';
          showModal('errorModal');
        }
      });
    });


    document.querySelectorAll('.select-status').forEach(select => {
      select.addEventListener('change', async function() {
        const inquiryId = this.dataset.inquiryId;
        const newStatus = this.value;
        const currentStatus = this.dataset.currentStatus;

        if (newStatus === currentStatus) return;

        try {
          const response = await fetch(`/admin/inquiries/${inquiryId}/status`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ status: newStatus })
          });

          const data = await response.json();

          if (data.success) {
            this.dataset.currentStatus = newStatus;
          } else {
            document.getElementById('errorMessage').textContent = data.message || 'Error updating status';
            showModal('errorModal');
            this.value = currentStatus;
          }
        } catch (error) {
          console.error('Error:', error);
          document.getElementById('errorMessage').textContent = 'An error occurred while updating status';
          showModal('errorModal');
          this.value = currentStatus;
        }
      });
    });


    document.querySelectorAll('.delete-inquiry').forEach(btn => {
      btn.addEventListener('click', async function() {
        const inquiryId = this.dataset.inquiryId;

        showConfirmation('Are you sure you want to delete this inquiry? This action cannot be undone.', async function() {
          try {
            const response = await fetch(`/admin/inquiries/${inquiryId}`, {
              method: 'DELETE'
            });

            const data = await response.json();

            if (data.success) {
              document.getElementById('successMessage').textContent = 'Inquiry deleted successfully';
              showModal('successModal');
              setTimeout(() => {
                location.reload();
              }, 1500);
            } else {
              document.getElementById('errorMessage').textContent = data.message || 'Error deleting inquiry';
              showModal('errorModal');
            }
          } catch (error) {
            console.error('Error:', error);
            document.getElementById('errorMessage').textContent = 'An error occurred while deleting the inquiry';
            showModal('errorModal');
          }
        });
      });
    });


    document.addEventListener('click', function(e) {
      if (e.target.classList.contains('success-modal') || e.target.classList.contains('confirmation-modal') || e.target.classList.contains('message-modal')) {
        closeModal(e.target.id);
      }
    });

    // Close message modal when clicking outside content
    document.getElementById('messageModal')?.addEventListener('click', function(e) {
      if (e.target === this) {
        closeModal('messageModal');
      }
    });

    // Message View Modal
    document.querySelectorAll('.view-message-btn').forEach(btn => {
      btn.addEventListener('click', function(e) {
        e.stopPropagation();
        const inquiryId = this.dataset.inquiryId;
        const subject = this.dataset.subject;
        const name = this.dataset.name;
        const email = this.dataset.email;
        const date = this.dataset.date;
        const message = this.dataset.message;

        // Decode HTML entities
        const decodeHtml = (html) => {
          const txt = document.createElement('textarea');
          txt.innerHTML = html;
          return txt.value;
        };

        document.getElementById('messageModalSubject').textContent = decodeHtml(subject);
        document.getElementById('messageModalName').textContent = decodeHtml(name);
        document.getElementById('messageModalEmail').textContent = decodeHtml(email);
        document.getElementById('messageModalDate').textContent = date;
        document.getElementById('messageModalText').textContent = decodeHtml(message);

        // Set up email link
        const emailLink = document.getElementById('messageModalEmailLink');
        const emailSubject = encodeURIComponent('Re: ' + subject);
        const emailBody = encodeURIComponent('Hello ' + name + ',\n\nRegarding your inquiry: ' + subject + '\n\n');
        emailLink.href = `mailto:${email}?subject=${emailSubject}&body=${emailBody}`;

        showModal('messageModal');
      });
    });


    updateBulkActions();
    syncSelectAll();
  </script>

  <!-- Success Modal -->
  <div class="success-modal" id="successModal">
    <div class="modal-content-wrapper">
      <div class="modal-icon">
        <i class="fas fa-check"></i>
      </div>
      <h3 class="modal-title" id="successTitle">Success!</h3>
      <p class="modal-message" id="successMessage">Operation completed successfully.</p>
      <div class="modal-actions">
        <button onclick="closeModal('successModal')" class="modal-btn modal-btn-primary">OK</button>
      </div>
    </div>
  </div>

  <!-- Error Modal -->
  <div class="success-modal" id="errorModal">
    <div class="modal-content-wrapper">
      <div class="modal-icon error">
        <i class="fas fa-exclamation-triangle"></i>
      </div>
      <h3 class="modal-title">Error Occurred</h3>
      <p class="modal-message" id="errorMessage">Something went wrong. Please try again.</p>
      <div class="modal-actions">
        <button onclick="closeModal('errorModal')" class="modal-btn modal-btn-primary">Close</button>
      </div>
    </div>
  </div>

  <!-- Confirmation Modal -->
  <div class="confirmation-modal" id="confirmationModal">
    <div class="modal-content-wrapper">
      <div class="modal-icon">
        <i class="fas fa-question-circle"></i>
      </div>
      <h3 class="modal-title">Confirm Action</h3>
      <p class="modal-message" id="confirmationMessage">Are you sure you want to proceed?</p>
      <div class="modal-actions">
        <button onclick="closeModal('confirmationModal')" class="modal-btn modal-btn-secondary">Cancel</button>
        <button id="confirmBtn" class="modal-btn modal-btn-primary">Confirm</button>
      </div>
    </div>
  </div>

  <!-- Message View Modal -->
  <div class="message-modal" id="messageModal">
    <div class="message-modal-content">
      <div class="message-modal-header">
        <div class="message-modal-title">
          <h3 id="messageModalSubject"></h3>
          <div class="message-meta">
            <span><strong>From:</strong> <span id="messageModalName"></span> (<span id="messageModalEmail"></span>)</span>
            <span><strong>Date:</strong> <span id="messageModalDate"></span></span>
          </div>
        </div>
        <button class="message-modal-close" onclick="closeModal('messageModal')" aria-label="Close">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <div class="message-modal-body">
        <div class="message-label">Message</div>
        <div class="message-text" id="messageModalText"></div>
      </div>
      <div class="message-modal-footer">
        <a id="messageModalEmailLink" class="btn btn-email" style="text-decoration: none;">
          <i class="fas fa-envelope"></i> Reply via Email
        </a>
        <button onclick="closeModal('messageModal')" class="btn btn-secondary">Close</button>
      </div>
    </div>
  </div>
</body>
</html>
