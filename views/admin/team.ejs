<body>
  <div class="dashboard-layout">
    <%- include('../partials/admin-sidebar') %>
    
    <div class="dashboard-main">
      <div class="page-header">
        <div>
          <h1>Manage Team</h1>
          <p>Add and manage team members</p>
        </div>
        <div style="display: flex; gap: 1rem; align-items: center;">
          <% if (teamMembers && teamMembers.length > 0) { %>
            <button onclick="openReorderModal()" class="btn-primary" style="background: #6b7280; padding: 1.1rem 1.5rem; border-radius: 8px; border: none; font-weight: 600; cursor: pointer; transition: all 0.2s; text-decoration: none; display: inline-block;">
              <i class="fas fa-sort"></i> Reorder Team
            </button>
          <% } %>
          <a href="/admin/team/add" class="btn-primary">
            <i class="fas fa-plus"></i> Add Team Member
          </a>
        </div>
      </div>

      <div class="filters-section">
        <form method="GET" action="/admin/team" class="filters-grid">
          <div class="filter-group">
            <label for="search">Search by Name or Position</label>
            <input 
              type="text" 
              id="search" 
              name="search" 
              class="filter-input" 
              placeholder="Search team members..."
              value="<%= filters.search %>"
            >
          </div>
          <div class="filter-group">
            <button type="submit" class="btn btn-filter">
              <i class="fas fa-search"></i> Search
            </button>
          </div>
        </form>
      </div>

      <div class="table-container">
        <% if (teamMembers && teamMembers.length > 0) { %>
          <!-- Desktop Table View -->
          <div class="table-wrapper">
          <table class="table">
            <thead>
              <tr>
                <th>Member</th>
                <th>Position</th>
                <th>Skills</th>
                <th>Status</th>
                <th>Last Active</th>
                <th>Order</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% teamMembers.forEach(member => { %>
                <tr>
                  <td>
                    <div style="display: flex; align-items: center; gap: 0.75rem;">
                      <img src="<%= member.avatar || '/images/default-avatar.webp' %>" alt="<%= member.name %>" class="team-avatar">
                      <div>
                        <div style="font-weight: 600;"><%= member.name %></div>
                        <div style="font-size: 0.8125rem; color: var(--text-secondary);"><%= member.email %></div>
                      </div>
                    </div>
                  </td>
                  <td><%= member.position %></td>
                  <td>
                    <% 
                      const skills = member.skills ? (Array.isArray(member.skills) ? member.skills : JSON.parse(member.skills)) : [];
                    %>
                    <% if (skills.length > 0) { %>
                      <div style="display: flex; flex-wrap: wrap; gap: 0.25rem;">
                        <% skills.slice(0, 3).forEach(skill => { %>
                          <span style="font-size: 0.75rem; padding: 0.125rem 0.5rem; background: var(--bg-secondary); border-radius: 4px;"><%= skill %></span>
                        <% }) %>
                        <% if (skills.length > 3) { %>
                          <span style="font-size: 0.75rem; color: var(--text-secondary);">+<%= skills.length - 3 %></span>
                        <% } %>
                      </div>
                    <% } else { %>
                      <span style="color: var(--text-secondary);">No skills</span>
                    <% } %>
                  </td>
                  <td>
                    <span class="status-badge <%= member.is_active ? 'active' : 'inactive' %>">
                      <%= member.is_active ? 'Active' : 'Inactive' %>
                    </span>
                  </td>
                  <td>
                    <% if (member.last_active) { %>
                      <span title="<%= new Date(member.last_active).toLocaleString() %>">
                        <%= new Date(member.last_active).toLocaleDateString() %><br>
                        <small style="color: var(--text-secondary); font-size: 0.75rem;" data-time="<%= member.last_active %>"><%= new Date(member.last_active).toLocaleTimeString() %></small>
                      </span>
                    <% } else { %>
                      <span style="color: var(--text-secondary);">Never</span>
                    <% } %>
                  </td>
                  <td><%= member.display_order || 0 %></td>
                  <td>
                    <div class="action-buttons">
                      <a href="/admin/team/edit/<%= member.id %>" class="btn btn-secondary btn-sm btn-icon-only" style="text-decoration: none; display: inline-flex;" title="Edit Team Member">
                        <i class="fas fa-edit"></i>
                      </a>
                      <button class="btn btn-danger btn-sm btn-icon-only delete-team-member" data-member-id="<%= member.id %>" data-member-name="<%= member.name %>" title="Delete Team Member">
                        <i class="fas fa-trash"></i>
                      </button>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
          </div>

          <!-- Mobile Card View -->
          <div class="mobile-card-view">
            <% teamMembers.forEach(member => { %>
              <% 
                const mobileSkills = member.skills ? (Array.isArray(member.skills) ? member.skills : JSON.parse(member.skills)) : [];
              %>
              <div class="mobile-card">
                <div class="mobile-card-header">
                  <img src="<%= member.avatar || '/images/default-avatar.webp' %>" alt="<%= member.name %>" class="mobile-card-avatar">
                  <div class="mobile-card-title">
                    <h3><%= member.name %></h3>
                    <p><%= member.position || 'No position' %></p>
                  </div>
                  <span class="status-badge <%= member.is_active ? 'active' : 'inactive' %>">
                    <%= member.is_active ? 'Active' : 'Inactive' %>
                  </span>
                </div>
                <div class="mobile-card-body">
                  <div class="mobile-card-row">
                    <span class="mobile-card-label">Email:</span>
                    <span class="mobile-card-value"><%= member.email %></span>
                  </div>
                  <div class="mobile-card-row">
                    <span class="mobile-card-label">Last Active:</span>
                    <span class="mobile-card-value">
                      <% if (member.last_active) { %>
                        <%= new Date(member.last_active).toLocaleDateString() %> <%= new Date(member.last_active).toLocaleTimeString() %>
                      <% } else { %>
                        <span style="color: var(--text-secondary);">Never</span>
                      <% } %>
                    </span>
                  </div>
                  <div class="mobile-card-row">
                    <span class="mobile-card-label">Order:</span>
                    <span class="mobile-card-value"><%= member.display_order || 0 %></span>
                  </div>
                  <div class="mobile-card-row">
                    <span class="mobile-card-label">Skills:</span>
                    <span class="mobile-card-value">
                      <% if (mobileSkills.length > 0) { %>
                        <div class="mobile-card-skills">
                          <% mobileSkills.slice(0, 4).forEach(skill => { %>
                            <span class="mobile-card-skill"><%= skill %></span>
                          <% }) %>
                          <% if (mobileSkills.length > 4) { %>
                            <span class="mobile-card-skill">+<%= mobileSkills.length - 4 %></span>
                          <% } %>
                        </div>
                      <% } else { %>
                        <span style="color: var(--text-secondary);">No skills</span>
                      <% } %>
                    </span>
                  </div>
                </div>
                <div class="mobile-card-actions">
                  <a href="/admin/team/edit/<%= member.id %>" class="btn btn-secondary" style="text-decoration: none;">
                    <i class="fas fa-edit"></i> Edit
                  </a>
                  <button class="btn btn-danger delete-team-member" data-member-id="<%= member.id %>" data-member-name="<%= member.name %>">
                    <i class="fas fa-trash"></i> Delete
                  </button>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="empty-state">
            <i class="fas fa-users"></i>
            <p>No team members found</p>
          </div>
        <% } %>
      </div>

      <!-- Pagination -->
      <% if (pagination && pagination.totalPages > 1) { %>
        <div class="pagination-container">
          <div class="pagination-info">
            Showing <%= ((pagination.currentPage - 1) * pagination.limit) + 1 %> to <%= Math.min(pagination.currentPage * pagination.limit, pagination.totalCount) %> of <%= pagination.totalCount %> results
          </div>
          <div class="pagination">
            <% if (pagination.hasPrev) { %>
              <a href="/admin/team?page=<%= pagination.currentPage - 1 %><%= filters.search ? '&search=' + encodeURIComponent(filters.search) : '' %>" class="pagination-btn">
                <i class="fas fa-chevron-left"></i>
              </a>
            <% } else { %>
              <span class="pagination-btn disabled">
                <i class="fas fa-chevron-left"></i>
              </span>
            <% } %>

            <% 
              let startPage = Math.max(1, pagination.currentPage - 2);
              let endPage = Math.min(pagination.totalPages, pagination.currentPage + 2);
              if (endPage - startPage < 4) {
                if (startPage === 1) {
                  endPage = Math.min(5, pagination.totalPages);
                } else {
                  startPage = Math.max(1, pagination.totalPages - 4);
                }
              }
            %>

            <% if (startPage > 1) { %>
              <a href="/admin/team?page=1<%= filters.search ? '&search=' + encodeURIComponent(filters.search) : '' %>" class="pagination-btn">1</a>
              <% if (startPage > 2) { %>
                <span class="pagination-ellipsis">...</span>
              <% } %>
            <% } %>

            <% for (let i = startPage; i <= endPage; i++) { %>
              <% if (i === pagination.currentPage) { %>
                <span class="pagination-btn active"><%= i %></span>
              <% } else { %>
                <a href="/admin/team?page=<%= i %><%= filters.search ? '&search=' + encodeURIComponent(filters.search) : '' %>" class="pagination-btn"><%= i %></a>
              <% } %>
            <% } %>

            <% if (endPage < pagination.totalPages) { %>
              <% if (endPage < pagination.totalPages - 1) { %>
                <span class="pagination-ellipsis">...</span>
              <% } %>
              <a href="/admin/team?page=<%= pagination.totalPages %><%= filters.search ? '&search=' + encodeURIComponent(filters.search) : '' %>" class="pagination-btn"><%= pagination.totalPages %></a>
            <% } %>

            <% if (pagination.hasNext) { %>
              <a href="/admin/team?page=<%= pagination.currentPage + 1 %><%= filters.search ? '&search=' + encodeURIComponent(filters.search) : '' %>" class="pagination-btn">
                <i class="fas fa-chevron-right"></i>
              </a>
            <% } else { %>
              <span class="pagination-btn disabled">
                <i class="fas fa-chevron-right"></i>
              </span>
            <% } %>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Reorder Modal -->
  <div class="reorder-modal" id="reorderModal">
    <div class="reorder-modal-content">
      <div class="reorder-modal-header">
        <h2>Reorder Team Members</h2>
        <p>Drag and drop team members to reorder them. The topmost member will have order 0.</p>
      </div>
      <div class="reorder-list" id="reorderList">
        <!-- Team members will be populated here -->
      </div>
      <div class="reorder-modal-actions">
        <button class="btn btn-cancel" onclick="closeReorderModal()">Cancel</button>
        <button class="btn btn-save" id="saveReorderBtn" onclick="saveReorder()">Save Order</button>
      </div>
    </div>
  </div>

  <!-- Success Modal -->
  <div class="success-modal" id="successModal">
    <div class="modal-content-wrapper">
      <div class="modal-icon">
        <i class="fas fa-check"></i>
      </div>
      <h3 class="modal-title">Success!</h3>
      <p class="modal-message" id="successMessage">Operation completed successfully.</p>
      <div class="modal-actions">
        <button onclick="closeSuccessModal()" class="modal-btn modal-btn-primary">OK</button>
      </div>
    </div>
  </div>

  <!-- Error Modal -->
  <div class="success-modal" id="errorModal">
    <div class="modal-content-wrapper">
      <div class="modal-icon error">
        <i class="fas fa-exclamation-triangle"></i>
      </div>
      <h3 class="modal-title">Error Occurred</h3>
      <p class="modal-message" id="errorMessage">Something went wrong. Please try again.</p>
      <div class="modal-actions">
        <button onclick="closeErrorModal()" class="modal-btn modal-btn-primary">Close</button>
      </div>
    </div>
  </div>

  <!-- Confirmation Modal -->
  <div class="confirmation-modal" id="confirmationModal">
    <div class="modal-content-wrapper">
      <div class="modal-icon warning">
        <i class="fas fa-question-circle"></i>
      </div>
      <h3 class="modal-title">Confirm Action</h3>
      <p class="modal-message" id="confirmationMessage">Are you sure you want to proceed?</p>
      <div class="modal-actions">
        <button onclick="closeModal('confirmationModal')" class="modal-btn modal-btn-secondary">Cancel</button>
        <button id="confirmBtn" class="modal-btn modal-btn-primary">Confirm</button>
      </div>
    </div>
  </div>

  <script>

    function formatRelativeTime(dateString) {
      if (!dateString) return 'Never';
      const date = new Date(dateString);
      const now = new Date();
      const diffMs = now - date;
      const diffMins = Math.floor(diffMs / 60000);
      const diffHours = Math.floor(diffMs / 3600000);
      const diffDays = Math.floor(diffMs / 86400000);
      
      if (diffMins < 1) return 'Just now';
      if (diffMins < 60) return `${diffMins} minute${diffMins !== 1 ? 's' : ''} ago`;
      if (diffHours < 24) return `${diffHours} hour${diffHours !== 1 ? 's' : ''} ago`;
      if (diffDays < 7) return `${diffDays} day${diffDays !== 1 ? 's' : ''} ago`;
      return date.toLocaleDateString();
    }

    let teamMembers = <%- JSON.stringify(teamMembers || []) %>;
    let reorderedMembers = [];

    function openReorderModal() {
      reorderedMembers = [...teamMembers];
      renderReorderList();
      document.getElementById('reorderModal').classList.add('show');
    }

    function closeReorderModal() {
      document.getElementById('reorderModal').classList.remove('show');
      reorderedMembers = [...teamMembers];
    }

    function closeSuccessModal() {
      document.getElementById('successModal').classList.remove('show');
      closeReorderModal();
      location.reload();
    }

    function closeErrorModal() {
      document.getElementById('errorModal').classList.remove('show');
    }

    function closeModal(modalId) {
      const modal = document.getElementById(modalId);
      if (modal) {
        modal.classList.remove('show');
      }
    }

    function showModal(modalId) {
      const modal = document.getElementById(modalId);
      if (modal) {
        modal.classList.add('show');
      }
    }

    function showConfirmation(message, onConfirm) {
      const modal = document.getElementById('confirmationModal');
      const messageEl = document.getElementById('confirmationMessage');
      const confirmBtn = document.getElementById('confirmBtn');
      
      if (modal && messageEl) {
        messageEl.textContent = message;
        showModal('confirmationModal');
        
        const newConfirmBtn = confirmBtn.cloneNode(true);
        confirmBtn.parentNode.replaceChild(newConfirmBtn, confirmBtn);
        
        newConfirmBtn.onclick = function() {
          closeModal('confirmationModal');
          if (onConfirm) onConfirm();
        };
      }
    }

    function renderReorderList() {
      const list = document.getElementById('reorderList');
      list.innerHTML = '';

      reorderedMembers.forEach((member, index) => {
        const item = document.createElement('div');
        item.className = 'reorder-item';
        item.draggable = true;
        item.dataset.index = index;
        item.dataset.id = member.id;

        item.innerHTML = `
          <div class="reorder-handle">
            <i class="fas fa-grip-vertical"></i>
          </div>
          <img src="${member.avatar || '/images/default-avatar.webp'}" alt="${member.name}" class="reorder-item-avatar">
          <div class="reorder-item-info">
            <div class="reorder-item-name">${member.name}</div>
            <div class="reorder-item-position">${member.position || 'No position'}</div>
          </div>
          <div class="reorder-item-order">${index}</div>
        `;


        item.addEventListener('dragstart', handleDragStart);
        item.addEventListener('dragend', handleDragEnd);
        item.addEventListener('dragover', handleDragOver);
        item.addEventListener('drop', handleDrop);
        item.addEventListener('dragenter', handleDragEnter);
        item.addEventListener('dragleave', handleDragLeave);

        list.appendChild(item);
      });
    }

    let draggedElement = null;
    let draggedIndex = null;

    function handleDragStart(e) {
      draggedElement = this;
      draggedIndex = parseInt(this.dataset.index);
      this.classList.add('dragging');
      e.dataTransfer.effectAllowed = 'move';
      e.dataTransfer.setData('text/html', this.innerHTML);
    }

    function handleDragEnd(e) {
      this.classList.remove('dragging');
      document.querySelectorAll('.reorder-item').forEach(item => {
        item.classList.remove('drag-over');
      });
    }

    function handleDragOver(e) {
      if (e.preventDefault) {
        e.preventDefault();
      }
      e.dataTransfer.dropEffect = 'move';
      return false;
    }

    function handleDragEnter(e) {
      if (this !== draggedElement) {
        this.classList.add('drag-over');
      }
    }

    function handleDragLeave(e) {
      this.classList.remove('drag-over');
    }

    function handleDrop(e) {
      if (e.stopPropagation) {
        e.stopPropagation();
      }

      if (draggedElement !== this) {
        const dropIndex = parseInt(this.dataset.index);
        const draggedMember = reorderedMembers[draggedIndex];
        

        reorderedMembers.splice(draggedIndex, 1);

        reorderedMembers.splice(dropIndex, 0, draggedMember);
        

        renderReorderList();
      }

      this.classList.remove('drag-over');
      return false;
    }

    async function saveReorder() {
      const saveBtn = document.getElementById('saveReorderBtn');
      saveBtn.disabled = true;
      saveBtn.textContent = 'Saving...';

      try {
        const teamMemberIds = reorderedMembers.map(member => member.id);
        
        const response = await fetch('/admin/team/reorder', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ teamMemberIds })
        });


        const contentType = response.headers.get('content-type');
        if (!contentType || !contentType.includes('application/json')) {
          const text = await response.text();
          console.error('Non-JSON response:', text.substring(0, 200));
          throw new Error('Server returned non-JSON response. Please check the console for details.');
        }

        const data = await response.json();

        if (data.success) {
          document.getElementById('successMessage').textContent = data.message || 'Team member order updated successfully.';
          document.getElementById('reorderModal').classList.remove('show');
          showModal('successModal');
        } else {
          document.getElementById('errorMessage').textContent = data.message || 'Error updating team member order.';
          showModal('errorModal');
          saveBtn.disabled = false;
          saveBtn.textContent = 'Save Order';
        }
      } catch (error) {
        console.error('Error:', error);
        document.getElementById('errorMessage').textContent = error.message || 'An error occurred while updating the order.';
        document.getElementById('errorModal').classList.add('show');
        saveBtn.disabled = false;
        saveBtn.textContent = 'Save Order';
      }
    }



    document.querySelectorAll('.delete-team-member').forEach(btn => {
      btn.addEventListener('click', function() {
        const memberId = this.dataset.memberId;
        const memberName = this.dataset.memberName;
        const deleteBtn = this;

        showConfirmation(`Are you sure you want to delete team member "${memberName}"? This action cannot be undone and will also delete their user account.`, async function() {
          const originalText = deleteBtn.innerHTML;
          deleteBtn.disabled = true;
          deleteBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';

          try {
            const response = await fetch(`/admin/team/${memberId}`, {
              method: 'DELETE'
            });

            const data = await response.json();

            if (data.success) {
              document.getElementById('successMessage').textContent = data.message || 'Team member deleted successfully.';
              showModal('successModal');
              setTimeout(() => {
                location.reload();
              }, 1500);
            } else {
              document.getElementById('errorMessage').textContent = data.message || 'Error deleting team member.';
              showModal('errorModal');
              deleteBtn.disabled = false;
              deleteBtn.innerHTML = originalText;
            }
          } catch (error) {
            console.error('Error:', error);
            document.getElementById('errorMessage').textContent = 'An error occurred while deleting the team member.';
            showModal('errorModal');
            deleteBtn.disabled = false;
            deleteBtn.innerHTML = originalText;
          }
        });
      });
    });

    document.addEventListener('click', function(e) {
      if (e.target.classList.contains('reorder-modal')) {
        if (e.target.id === 'reorderModal') {
          closeReorderModal();
        }
      }
      if (e.target.classList.contains('success-modal') || e.target.classList.contains('confirmation-modal')) {
        closeModal(e.target.id);
      }
    });


    document.addEventListener('DOMContentLoaded', function() {
      document.querySelectorAll('[data-time]').forEach(el => {
        const timeStr = el.getAttribute('data-time');
        if (timeStr) {
          const relativeTime = formatRelativeTime(timeStr);
          if (relativeTime !== 'Never' && !relativeTime.includes('/')) {
            el.textContent = relativeTime;
          }
        }
      });
    });
  </script>

</body>
</html>

