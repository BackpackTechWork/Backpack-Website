      }
    }

    /* Extra extra small devices: up to 360px */
    @media (max-width: 360px) {
      .dashboard-main {
        padding: 0.5rem;
      }

      .page-header h1 {
        font-size: 1.125rem;
      }

      .filters-section {
        padding: 0.75rem;
      }

      .mobile-card {
        padding: 0.625rem;
      }

      .mobile-card-title h3 {
        font-size: 0.8125rem;
      }

      .mobile-card-title p {
        font-size: 0.6875rem;
      }

      .mobile-card-row {
        font-size: 0.6875rem;
      }

      .mobile-card-label {
        font-size: 0.6875rem;
      }

      .mobile-card-value {
        font-size: 0.6875rem;
      }
    }
  </style>
