<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="icon" type="image/x-icon" href="/Backpack.ico">
  <link rel="shortcut icon" type="image/x-icon" href="/Backpack.ico">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <style>
    :root {
      --bg-primary: #ffffff;
      --bg-secondary: #f9fafb;
      --border-primary: #e5e7eb;
      --text-primary: #111827;
      --text-secondary: #6b7280;
      --accent-red: #c51d34;
    }

    .dashboard-layout {
      display: flex;
      min-height: 100vh;
    }

    .dashboard-main {
      flex: 1;
      padding: 2rem 2.5rem;
      margin-left: 280px;
      background: var(--bg-secondary);
    }

    .page-header {
      margin-bottom: 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .page-header h1 {
      font-size: 2rem;
      font-weight: 700;
      color: var(--text-primary);
      margin-bottom: 0.5rem;
    }

    .page-header p {
      color: var(--text-secondary);
      font-size: 0.9375rem;
    }

    .btn-primary {
      background: var(--accent-red);
      color: white;
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      border: none;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
    }

    .btn-primary:hover {
      background: #a01628;
    }

    .table-container {
      background: var(--bg-primary);
      border-radius: 12px;
      box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.05);
      overflow: hidden;
      margin-bottom: 2rem;
    }

    .table {
      width: 100%;
      border-collapse: collapse;
    }

    .table thead {
      background: var(--bg-secondary);
    }

    .table th {
      padding: 1rem 1.5rem;
      text-align: left;
      font-weight: 600;
      font-size: 0.875rem;
      color: var(--text-secondary);
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .table td {
      padding: 1rem 1.5rem;
      border-top: 1px solid var(--border-primary);
      color: var(--text-primary);
    }

    .table tbody tr:hover {
      background: var(--bg-secondary);
    }

    .status-badge {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      border-radius: 6px;
      font-size: 0.8125rem;
      font-weight: 600;
    }

    .status-badge.active {
      background: rgba(34, 197, 94, 0.1);
      color: #22c55e;
    }

    .status-badge.inactive {
      background: rgba(239, 68, 68, 0.1);
      color: #ef4444;
    }

    .btn {
      padding: 0.5rem 1rem;
      border-radius: 6px;
      font-size: 0.875rem;
      font-weight: 500;
      cursor: pointer;
      border: none;
      transition: all 0.2s;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-sm {
      padding: 0.5rem;
      font-size: 0.875rem;
      width: 36px;
      height: 36px;
      justify-content: center;
    }

    .btn-icon-only {
      padding: 0.5rem;
      width: 36px;
      height: 36px;
      gap: 0;
    }

    .btn-danger {
      background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
      color: white;
      box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
    }

    .btn-danger:hover {
      background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(239, 68, 68, 0.4);
    }

    .btn-secondary {
      background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
      color: white;
      box-shadow: 0 4px 12px rgba(107, 114, 128, 0.3);
    }

    .btn-secondary:hover {
      background: linear-gradient(135deg, #4b5563 0%, #374151 100%);
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(107, 114, 128, 0.4);
    }

    .btn-success {
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      color: white;
      box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    }

    .btn-success:hover {
      background: linear-gradient(135deg, #059669 0%, #047857 100%);
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
    }

    .action-buttons {
      display: flex;
      gap: 0.5rem;
    }

    .empty-state {
      padding: 4rem 2rem;
      text-align: center;
      color: var(--text-secondary);
    }

    .empty-state i {
      font-size: 4rem;
      margin-bottom: 1.5rem;
      opacity: 0.3;
      color: var(--text-secondary);
    }

    .empty-state h3 {
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: 0.5rem;
    }

    .empty-state p {
      font-size: 0.9375rem;
      margin: 0;
      color: var(--text-secondary);
    }

    .search-container {
      background: var(--bg-primary);
      border-radius: 12px;
      box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.05);
      padding: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .search-form {
      display: flex;
      gap: 1rem;
      align-items: center;
    }

    .search-input-wrapper {
      flex: 1;
      position: relative;
    }

    .search-input-wrapper i {
      position: absolute;
      left: 1rem;
      top: 50%;
      transform: translateY(-50%);
      color: var(--text-secondary);
      pointer-events: none;
    }

    .search-input {
      width: 100%;
      padding: 0.75rem 1rem 0.75rem 2.5rem;
      border: 2px solid var(--border-primary);
      border-radius: 8px;
      font-size: 0.875rem;
      transition: all 0.2s;
      font-family: inherit;
    }

    .search-input:focus {
      outline: none;
      border-color: var(--accent-red);
      box-shadow: 0 0 0 3px rgba(197, 29, 52, 0.1);
    }

    /* Success/Error/Confirmation Modal Styles */
    .success-modal,
    .confirmation-modal {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      backdrop-filter: blur(4px);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 10000;
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s ease;
    }

    .success-modal.show,
    .confirmation-modal.show {
      opacity: 1;
      visibility: visible;
    }

    .modal-content-wrapper {
      background: white;
      border-radius: 16px;
      padding: 2.5rem;
      max-width: 480px;
      width: 90%;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      transform: scale(0.8);
      transition: transform 0.3s ease;
      text-align: center;
    }

    .success-modal.show .modal-content-wrapper,
    .confirmation-modal.show .modal-content-wrapper {
      transform: scale(1);
    }

    .modal-icon {
      width: 80px;
      height: 80px;
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      animation: successPulse 0.6s ease-out;
    }

    .modal-icon.error {
      background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    }

    .modal-icon.warning {
      background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    }

    .modal-icon i {
      color: white;
      font-size: 2.5rem;
    }

    @keyframes successPulse {
      0% {
        transform: scale(0);
        opacity: 0;
      }
      50% {
        transform: scale(1.1);
      }
      100% {
        transform: scale(1);
        opacity: 1;
      }
    }

    .modal-title {
      font-size: 1.75rem;
      font-weight: 700;
      color: #111827;
      margin-bottom: 0.75rem;
    }

    .modal-message {
      color: #6b7280;
      font-size: 1rem;
      margin-bottom: 2rem;
      line-height: 1.6;
    }

    .modal-actions {
      display: flex;
      gap: 1rem;
      justify-content: center;
    }

    .modal-btn {
      padding: 0.75rem 2rem;
      border-radius: 8px;
      font-weight: 600;
      cursor: pointer;
      border: none;
      font-size: 0.9375rem;
      transition: all 0.2s;
      text-decoration: none;
      display: inline-block;
    }

    .modal-btn-primary {
      background: linear-gradient(135deg, #c51d34 0%, #a01628 100%);
      color: white;
      box-shadow: 0 4px 12px rgba(197, 29, 52, 0.3);
    }

    .modal-btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(197, 29, 52, 0.4);
    }

    .modal-btn-secondary {
      background: #f3f4f6;
      color: #374151;
    }

    .modal-btn-secondary:hover {
      background: #e5e7eb;
    }

    /* Reorder Modal Styles */
    .reorder-modal {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      backdrop-filter: blur(4px);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 10000;
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s ease;
    }

    .reorder-modal.show {
      opacity: 1;
      visibility: visible;
    }

    .reorder-modal-content {
      background: white;
      border-radius: 16px;
      padding: 2rem;
      max-width: 600px;
      width: 90%;
      max-height: 80vh;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      transform: scale(0.8);
      transition: transform 0.3s ease;
      display: flex;
      flex-direction: column;
    }

    .reorder-modal.show .reorder-modal-content {
      transform: scale(1);
    }

    .reorder-modal-header {
      margin-bottom: 1.5rem;
    }

    .reorder-modal-header h2 {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--text-primary);
      margin-bottom: 0.5rem;
    }

    .reorder-modal-header p {
      color: var(--text-secondary);
      font-size: 0.875rem;
    }

    .reorder-list {
      flex: 1;
      overflow-y: auto;
      margin-bottom: 1.5rem;
      min-height: 300px;
      max-height: 400px;
    }

    .reorder-item {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1rem;
      background: var(--bg-secondary);
      border: 2px solid var(--border-primary);
      border-radius: 8px;
      margin-bottom: 0.75rem;
      cursor: move;
      transition: all 0.2s;
      position: relative;
    }

    .reorder-item:hover {
      border-color: var(--accent-red);
      box-shadow: 0 2px 8px rgba(197, 29, 52, 0.1);
    }

    .reorder-item.dragging {
      opacity: 0.5;
      border-color: var(--accent-red);
      box-shadow: 0 4px 12px rgba(197, 29, 52, 0.2);
    }

    .reorder-item.drag-over {
      border-color: var(--accent-red);
      background: rgba(197, 29, 52, 0.05);
    }

    .reorder-handle {
      color: var(--text-secondary);
      font-size: 1.25rem;
      cursor: grab;
    }

    .reorder-handle:active {
      cursor: grabbing;
    }

    .reorder-item-icon {
      width: 48px;
      height: 48px;
      border-radius: 12px;
      background: linear-gradient(135deg, #c51d34 0%, #a01628 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.5rem;
      overflow: hidden;
      flex-shrink: 0;
    }

    .reorder-item-icon img {
      width: 100%;
      height: 100%;
      object-fit: contain;
      padding: 4px;
    }

    .reorder-item-info {
      flex: 1;
    }

    .reorder-item-name {
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: 0.25rem;
    }

    .reorder-item-description {
      font-size: 0.875rem;
      color: var(--text-secondary);
    }

    .reorder-item-order {
      font-size: 0.875rem;
      color: var(--accent-red);
      font-weight: 600;
      min-width: 40px;
      text-align: center;
    }

    .reorder-modal-actions {
      display: flex;
      gap: 1rem;
      justify-content: flex-end;
      padding-top: 1.5rem;
      border-top: 1px solid var(--border-primary);
    }

    .reorder-modal-actions .btn {
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      font-weight: 600;
      cursor: pointer;
      border: none;
      font-size: 0.9375rem;
      transition: all 0.2s;
    }

    .reorder-modal-actions .btn-cancel {
      background: var(--bg-secondary);
      color: var(--text-primary);
      border: 1px solid var(--border-primary);
    }

    .reorder-modal-actions .btn-cancel:hover {
      background: #e5e7eb;
    }

    .reorder-modal-actions .btn-save {
      background: var(--accent-red);
      color: white;
    }

    .reorder-modal-actions .btn-save:hover {
      background: #a01628;
    }

    .reorder-modal-actions .btn-save:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }

    @media (max-width: 768px) {
      .dashboard-main {
        margin-left: 0;
        padding: 1rem;
      }

      .search-form {
        flex-direction: column;
      }

      .search-input-wrapper {
        width: 100%;
      }

      .page-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
      }

      .page-header > div:last-child {
        width: 100%;
        flex-direction: column;
      }

      .page-header > div:last-child > * {
        width: 100%;
      }
    }
  </style>
</head>
<body>
  <div class="dashboard-layout">
    <%- include('../partials/admin-sidebar') %>
    
    <div class="dashboard-main">
      <div class="page-header">
        <div>
          <h1>Manage Services</h1>
          <p>Create and manage your services</p>
        </div>
        <div style="display: flex; gap: 1rem; align-items: center;">
          <% if (services && services.length > 0) { %>
            <button onclick="openReorderModal()" class="btn-primary" style="background: #6b7280; padding: 1rem 1.5rem; border-radius: 8px; border: none; font-weight: 600; cursor: pointer; transition: all 0.2s; text-decoration: none; display: inline-block;">
              <i class="fas fa-sort"></i> Reorder Services
            </button>
          <% } %>
          <a href="/admin/services/add" class="btn-primary" style="text-decoration: none; display: inline-block;">
            <i class="fas fa-plus"></i> Add Service
          </a>
        </div>
      </div>

      <!-- Search Bar -->
      <div class="search-container">
        <form method="GET" action="/admin/services" class="search-form">
          <div class="search-input-wrapper">
            <i class="fas fa-search"></i>
            <input 
              type="text" 
              name="search" 
              placeholder="Search by title..." 
              value="<%= filters && filters.search ? filters.search : '' %>"
              class="search-input"
            >
          </div>
          <button type="submit" class="btn-primary" style="white-space: nowrap;">
            <i class="fas fa-search"></i> Search
          </button>
          <% if (filters && filters.search) { %>
            <a href="/admin/services" class="btn btn-secondary" style="text-decoration: none; display: inline-block; white-space: nowrap;">
              <i class="fas fa-times"></i> Clear
            </a>
          <% } %>
        </form>
      </div>

      <div class="table-container">
        <% if (services && services.length > 0) { %>
          <table class="table">
            <thead>
              <tr>
                <th>Title</th>
                <th>Icon</th>
                <th>Projects</th>
                <th>Status</th>
                <th>Order</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% services.forEach(service => { %>
                <tr>
                  <td><strong><%= service.title %></strong></td>
                  <td>
                    <% if (service.icon) { %>
                      <% if (service.icon.startsWith('/')) { %>
                        <img src="<%= service.icon %>" alt="Service Icon" class="service-icon-img" style="width: 24px; height: 24px; object-fit: contain;" onerror="this.style.display='none'; this.nextElementSibling.style.display='inline';">
                        <i class="fas fa-image" style="display: none;"></i>
                      <% } else { %>
                        <i class="fas fa-<%= service.icon %>"></i>
                      <% } %>
                    <% } %>
                  </td>
                  <td><%= service.project_count || 0 %></td>
                  <td>
                    <span class="status-badge <%= service.is_active ? 'active' : 'inactive' %>">
                      <%= service.is_active ? 'Active' : 'Inactive' %>
                    </span>
                  </td>
                  <td><%= service.display_order || 0 %></td>
                  <td>
                    <div class="action-buttons">
                      <button class="btn btn-success btn-sm btn-icon-only toggle-service" data-service-id="<%= service.id %>" data-status="<%= service.is_active %>" title="<%= service.is_active ? 'Deactivate' : 'Activate' %>">
                        <i class="fas fa-<%= service.is_active ? 'eye-slash' : 'eye' %>"></i>
                      </button>
                      <a href="/admin/services/edit/<%= service.id %>" class="btn btn-secondary btn-sm btn-icon-only" style="text-decoration: none; display: inline-flex;" title="Edit Service">
                        <i class="fas fa-edit"></i>
                      </a>
                      <button class="btn btn-danger btn-sm btn-icon-only delete-service" data-service-id="<%= service.id %>" data-service-title="<%= service.title %>" title="Delete Service">
                        <i class="fas fa-trash"></i>
                      </button>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <div class="empty-state">
            <i class="fas fa-cogs"></i>
            <h3>No Services Found</h3>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <script>

    function showModal(modalId) {
      const modal = document.getElementById(modalId);
      if (modal) {
        modal.classList.add('show');
      }
    }

    function closeModal(modalId) {
      const modal = document.getElementById(modalId);
      if (modal) {
        modal.classList.remove('show');
      }
    }


    function showConfirmation(message, onConfirm) {
      const modal = document.getElementById('confirmationModal');
      const messageEl = document.getElementById('confirmationMessage');
      const confirmBtn = document.getElementById('confirmBtn');
      
      if (modal && messageEl) {
        messageEl.textContent = message;
        modal.classList.add('show');
        

        const newConfirmBtn = confirmBtn.cloneNode(true);
        confirmBtn.parentNode.replaceChild(newConfirmBtn, confirmBtn);
        
        newConfirmBtn.onclick = function() {
          closeModal('confirmationModal');
          if (onConfirm) onConfirm();
        };
      }
    }


    document.querySelectorAll('.toggle-service').forEach(btn => {
      btn.addEventListener('click', async function() {
        const serviceId = this.dataset.serviceId;
        const currentStatus = this.dataset.status === 'true';

        try {
          const response = await fetch(`/admin/services/${serviceId}/toggle`, {
            method: 'POST'
          });

          const data = await response.json();

          if (data.success) {
            location.reload();
          } else {
            document.getElementById('errorMessage').textContent = data.message || 'Error toggling service status';
            showModal('errorModal');
          }
        } catch (error) {
          console.error('Error:', error);
          document.getElementById('errorMessage').textContent = 'An error occurred while toggling service status';
          showModal('errorModal');
        }
      });
    });


    document.querySelectorAll('.delete-service').forEach(btn => {
      btn.addEventListener('click', async function() {
        const serviceId = this.dataset.serviceId;
        const serviceTitle = this.dataset.serviceTitle;

        showConfirmation(`Are you sure you want to delete service "${serviceTitle}"? This action cannot be undone.`, async function() {
          try {
            const response = await fetch(`/admin/services/${serviceId}`, {
              method: 'DELETE'
            });

            const data = await response.json();

            if (data.success) {
              document.getElementById('successMessage').textContent = 'Service deleted successfully';
              showModal('successModal');
              setTimeout(() => {
                location.reload();
              }, 1500);
            } else {
              document.getElementById('errorMessage').textContent = data.message || 'Error deleting service';
              showModal('errorModal');
            }
          } catch (error) {
            console.error('Error:', error);
            document.getElementById('errorMessage').textContent = 'An error occurred while deleting the service';
            showModal('errorModal');
          }
        });
      });
    });


    document.addEventListener('click', function(e) {
      if (e.target.classList.contains('success-modal') || e.target.classList.contains('confirmation-modal')) {
        closeModal(e.target.id);
      }
    });
  </script>

  <!-- Success Modal -->
  <div class="success-modal" id="successModal">
    <div class="modal-content-wrapper">
      <div class="modal-icon">
        <i class="fas fa-check"></i>
      </div>
      <h3 class="modal-title">Success!</h3>
      <p class="modal-message" id="successMessage">Operation completed successfully.</p>
      <div class="modal-actions">
        <button onclick="closeModal('successModal')" class="modal-btn modal-btn-primary">OK</button>
      </div>
    </div>
  </div>

  <!-- Error Modal -->
  <div class="success-modal" id="errorModal">
    <div class="modal-content-wrapper">
      <div class="modal-icon error">
        <i class="fas fa-exclamation-triangle"></i>
      </div>
      <h3 class="modal-title">Error Occurred</h3>
      <p class="modal-message" id="errorMessage">Something went wrong. Please try again.</p>
      <div class="modal-actions">
        <button onclick="closeModal('errorModal')" class="modal-btn modal-btn-primary">Close</button>
      </div>
    </div>
  </div>

  <!-- Confirmation Modal -->
  <div class="confirmation-modal" id="confirmationModal">
    <div class="modal-content-wrapper">
      <div class="modal-icon warning">
        <i class="fas fa-question-circle"></i>
      </div>
      <h3 class="modal-title">Confirm Action</h3>
      <p class="modal-message" id="confirmationMessage">Are you sure you want to proceed?</p>
      <div class="modal-actions">
        <button onclick="closeModal('confirmationModal')" class="modal-btn modal-btn-secondary">Cancel</button>
        <button id="confirmBtn" class="modal-btn modal-btn-primary">Confirm</button>
      </div>
    </div>
  </div>

  <!-- Reorder Modal -->
  <div class="reorder-modal" id="reorderModal">
    <div class="reorder-modal-content">
      <div class="reorder-modal-header">
        <h2>Reorder Services</h2>
        <p>Drag and drop services to reorder them. The topmost service will have order 0.</p>
      </div>
      <div class="reorder-list" id="reorderList">
        <!-- Services will be populated here -->
      </div>
      <div class="reorder-modal-actions">
        <button class="btn btn-cancel" onclick="closeReorderModal()">Cancel</button>
        <button class="btn btn-save" id="saveReorderBtn" onclick="saveReorder()">Save Order</button>
      </div>
    </div>
  </div>

  <!-- Reorder Success Modal -->
  <div class="reorder-modal" id="reorderSuccessModal">
    <div class="reorder-modal-content" style="max-width: 400px;">
      <div style="text-align: center;">
        <div style="width: 80px; height: 80px; background: linear-gradient(135deg, #10b981 0%, #059669 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem;">
          <i class="fas fa-check" style="color: white; font-size: 2.5rem;"></i>
        </div>
        <h2 style="font-size: 1.5rem; font-weight: 700; color: var(--text-primary); margin-bottom: 0.5rem;">Success!</h2>
        <p style="color: var(--text-secondary); margin-bottom: 1.5rem;" id="reorderSuccessMessage">Service order updated successfully.</p>
        <button class="btn btn-save" onclick="closeReorderSuccessModal()">OK</button>
      </div>
    </div>
  </div>

  <!-- Reorder Error Modal -->
  <div class="reorder-modal" id="reorderErrorModal">
    <div class="reorder-modal-content" style="max-width: 400px;">
      <div style="text-align: center;">
        <div style="width: 80px; height: 80px; background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem;">
          <i class="fas fa-exclamation-triangle" style="color: white; font-size: 2.5rem;"></i>
        </div>
        <h2 style="font-size: 1.5rem; font-weight: 700; color: var(--text-primary); margin-bottom: 0.5rem;">Error</h2>
        <p style="color: var(--text-secondary); margin-bottom: 1.5rem;" id="reorderErrorMessage">Something went wrong. Please try again.</p>
        <button class="btn btn-save" onclick="closeReorderErrorModal()">Close</button>
      </div>
    </div>
  </div>

  <script>
    let services = <%- JSON.stringify(services || []) %>;
    let reorderedServices = [];

    function openReorderModal() {
      reorderedServices = [...services];
      renderReorderList();
      document.getElementById('reorderModal').classList.add('show');

      setTimeout(processAllImages, 200);
    }

    function closeReorderModal() {
      document.getElementById('reorderModal').classList.remove('show');
      reorderedServices = [...services];
    }

    function closeReorderSuccessModal() {
      document.getElementById('reorderSuccessModal').classList.remove('show');
      closeReorderModal();
      location.reload();
    }

    function closeReorderErrorModal() {
      document.getElementById('reorderErrorModal').classList.remove('show');
    }

    function renderReorderList() {
      const list = document.getElementById('reorderList');
      list.innerHTML = '';

      reorderedServices.forEach((service, index) => {
        const item = document.createElement('div');
        item.className = 'reorder-item';
        item.draggable = true;
        item.dataset.index = index;
        item.dataset.id = service.id;


        let iconHtml = '';
        if (service.icon) {
          if (service.icon.startsWith('/')) {
            iconHtml = `<img src="${service.icon}" alt="Service Icon" class="service-icon-img" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"><i class="fas fa-cog" style="display: none;"></i>`;
          } else {
            iconHtml = `<i class="fas fa-${service.icon}"></i>`;
          }
        } else {
          iconHtml = '<i class="fas fa-cog"></i>';
        }

        item.innerHTML = `
          <div class="reorder-handle">
            <i class="fas fa-grip-vertical"></i>
          </div>
          <div class="reorder-item-icon">
            ${iconHtml}
          </div>
          <div class="reorder-item-info">
            <div class="reorder-item-name">${service.title || 'Untitled Service'}</div>
            <div class="reorder-item-description">${service.short_description || 'No description'}</div>
          </div>
          <div class="reorder-item-order">${index}</div>
        `;


        item.addEventListener('dragstart', handleDragStart);
        item.addEventListener('dragend', handleDragEnd);
        item.addEventListener('dragover', handleDragOver);
        item.addEventListener('drop', handleDrop);
        item.addEventListener('dragenter', handleDragEnter);
        item.addEventListener('dragleave', handleDragLeave);

        list.appendChild(item);
      });
    }

    let draggedElement = null;
    let draggedIndex = null;

    function handleDragStart(e) {
      draggedElement = this;
      draggedIndex = parseInt(this.dataset.index);
      this.classList.add('dragging');
      e.dataTransfer.effectAllowed = 'move';
      e.dataTransfer.setData('text/html', this.innerHTML);
    }

    function handleDragEnd(e) {
      this.classList.remove('dragging');
      document.querySelectorAll('.reorder-item').forEach(item => {
        item.classList.remove('drag-over');
      });
    }

    function handleDragOver(e) {
      if (e.preventDefault) {
        e.preventDefault();
      }
      e.dataTransfer.dropEffect = 'move';
      return false;
    }

    function handleDragEnter(e) {
      if (this !== draggedElement) {
        this.classList.add('drag-over');
      }
    }

    function handleDragLeave(e) {
      this.classList.remove('drag-over');
    }

    function handleDrop(e) {
      if (e.stopPropagation) {
        e.stopPropagation();
      }

      if (draggedElement !== this) {
        const dropIndex = parseInt(this.dataset.index);
        const draggedService = reorderedServices[draggedIndex];
        

        reorderedServices.splice(draggedIndex, 1);

        reorderedServices.splice(dropIndex, 0, draggedService);
        

        renderReorderList();

        setTimeout(processAllImages, 100);
      }

      this.classList.remove('drag-over');
      return false;
    }

    async function saveReorder() {
      const saveBtn = document.getElementById('saveReorderBtn');
      saveBtn.disabled = true;
      saveBtn.textContent = 'Saving...';

      try {
        const serviceIds = reorderedServices.map(service => service.id);
        
        const response = await fetch('/admin/services/reorder', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ serviceIds })
        });


        const contentType = response.headers.get('content-type');
        if (!contentType || !contentType.includes('application/json')) {
          const text = await response.text();
          console.error('Non-JSON response:', text.substring(0, 200));
          throw new Error('Server returned non-JSON response. Please check the console for details.');
        }

        const data = await response.json();

        if (data.success) {
          document.getElementById('reorderSuccessMessage').textContent = data.message || 'Service order updated successfully.';
          document.getElementById('reorderModal').classList.remove('show');
          document.getElementById('reorderSuccessModal').classList.add('show');
        } else {
          document.getElementById('reorderErrorMessage').textContent = data.message || 'Error updating service order.';
          document.getElementById('reorderErrorModal').classList.add('show');
          saveBtn.disabled = false;
          saveBtn.textContent = 'Save Order';
        }
      } catch (error) {
        console.error('Error:', error);
        document.getElementById('reorderErrorMessage').textContent = error.message || 'An error occurred while updating the order.';
        document.getElementById('reorderErrorModal').classList.add('show');
        saveBtn.disabled = false;
        saveBtn.textContent = 'Save Order';
      }
    }


    document.addEventListener('click', function(e) {
      if (e.target.classList.contains('reorder-modal')) {
        if (e.target.id === 'reorderModal') {
          closeReorderModal();
        } else if (e.target.id === 'reorderSuccessModal') {
          closeReorderSuccessModal();
        } else if (e.target.id === 'reorderErrorModal') {
          closeReorderErrorModal();
        }
      }
    });
  </script>

  <!-- White Image to Black Converter Script -->
  <script>
    function checkImageBrightness(img) {
      return new Promise((resolve) => {

        if (img.dataset.processed === 'true') {
          resolve(false);
          return;
        }
        

        if (!img.complete || img.naturalWidth === 0 || img.naturalHeight === 0) {
          const checkLoaded = () => {
            if (img.complete && img.naturalWidth > 0 && img.naturalHeight > 0) {
              analyzeImage(img).then(resolve);
            } else {
              setTimeout(checkLoaded, 100);
            }
          };
          checkLoaded();
          return;
        }
        
        analyzeImage(img).then(resolve);
      });
    }
    
    function analyzeImage(img) {
      return new Promise((resolve) => {
        try {
          const canvas = document.createElement('canvas');
          const ctx = canvas.getContext('2d');
          canvas.width = img.naturalWidth || img.width;
          canvas.height = img.naturalHeight || img.height;
          
          if (canvas.width === 0 || canvas.height === 0) {
            img.dataset.processed = 'true';
            resolve(false);
            return;
          }
          
          ctx.drawImage(img, 0, 0);
          

          const samplePoints = [];
          const gridSize = 5; 
          
          for (let i = 0; i <= gridSize; i++) {
            for (let j = 0; j <= gridSize; j++) {
              samplePoints.push({
                x: (i / gridSize) * canvas.width,
                y: (j / gridSize) * canvas.height
              });
            }
          }
          
          let totalBrightness = 0;
          let sampleCount = 0;
          let whitePixelCount = 0;
          
          samplePoints.forEach(point => {
            const x = Math.floor(point.x);
            const y = Math.floor(point.y);
            
            if (x >= 0 && x < canvas.width && y >= 0 && y < canvas.height) {
              try {
                const pixelData = ctx.getImageData(x, y, 1, 1).data;
                const r = pixelData[0];
                const g = pixelData[1];
                const b = pixelData[2];
                const a = pixelData[3];
                

                if (a < 128) return;
                

                const brightness = (r + g + b) / 3;
                totalBrightness += brightness;
                sampleCount++;
                

                if (brightness > 200) {
                  whitePixelCount++;
                }
              } catch (e) {

              }
            }
          });
          
          if (sampleCount === 0) {
            img.dataset.processed = 'true';
            resolve(false);
            return;
          }
          
          const averageBrightness = totalBrightness / sampleCount;
          const whitePixelRatio = whitePixelCount / sampleCount;
          



          const shouldConvert = averageBrightness > 200 || whitePixelRatio > 0.8;
          
          if (shouldConvert) {
            img.style.filter = 'brightness(0)';
            img.style.transition = 'filter 0.3s ease';
          }
          
          img.dataset.processed = 'true';
          resolve(shouldConvert);
        } catch (e) {
          console.warn('Error analyzing image:', e);
          img.dataset.processed = 'true';
          resolve(false);
        }
      });
    }
    
    function processAllImages() {
      const serviceImages = document.querySelectorAll('.service-icon-img:not([data-processed="true"])');
      
      if (serviceImages.length === 0) return;
      
      serviceImages.forEach(img => {
        checkImageBrightness(img);
      });
    }
    

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', function() {

        setTimeout(processAllImages, 100);
        

        setTimeout(processAllImages, 1000);
        setTimeout(processAllImages, 2000);
        

        const observer = new MutationObserver(processAllImages);
        observer.observe(document.body, {
          childList: true,
          subtree: true
        });
      });
    } else {

      setTimeout(processAllImages, 100);
      setTimeout(processAllImages, 1000);
      setTimeout(processAllImages, 2000);
    }
    

    document.addEventListener('load', function(e) {
      if (e.target.classList && e.target.classList.contains('service-icon-img')) {
        checkImageBrightness(e.target);
      }
    }, true);
  </script>
