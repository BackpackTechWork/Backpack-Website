<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="icon" type="image/x-icon" href="/Backpack.ico">
  <link rel="shortcut icon" type="image/x-icon" href="/Backpack.ico">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
  <style>

    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap');

    :root {
      --bg-primary: #ffffff;
      --bg-secondary: #f9fafb;
      --bg-tertiary: #f3f4f6;
      --border-primary: #e5e7eb;
      --border-secondary: #f3f4f6;
      --text-primary: #111827;
      --text-secondary: #6b7280;
      --text-tertiary: #9ca3af;
      --accent-red: #c51d34;
      --accent-red-dark: #a01628;
      --accent-red-light: #e02444;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      background: var(--bg-secondary);
      color: #111827;
      min-height: 100vh;
      line-height: 1.5;
      -webkit-font-smoothing: antialiased;
    }
    
    .dashboard-main {
      color: #111827;
    }

    .dashboard-layout {
      display: flex;
      min-height: 100vh;
    }

    .dashboard-main {
      flex: 1;
      padding: 2rem 2.5rem;
      margin-left: 280px;
      max-width: 100%;
    }

    .dashboard {
      max-width: 1400px;
      margin: 0 auto;
    }

    /* Header Section */
    .dashboard-main .dashboard-header,
    .dashboard .dashboard-header,
    .dashboard-header {
      margin-bottom: 2.5rem;
      position: relative;
      z-index: 1;
    }

    .dashboard-main .dashboard-header,
    .dashboard .dashboard-header,
    .dashboard-header {
      animation: none !important;
      animation-play-state: running !important;
    }

    .dashboard-main .dashboard-header h1,
    .dashboard .dashboard-header h1,
    .dashboard-header h1 {
      font-size: 2rem !important;
      font-weight: 700 !important;
      color: #111827 !important;
      margin-bottom: 0.5rem !important;
      letter-spacing: -0.02em;
      visibility: visible !important;
      opacity: 1 !important;
      display: block !important;
      text-shadow: none !important;
      -webkit-text-fill-color: #111827 !important;
      animation: none !important;
      transform: none !important;
    }

    .dashboard-main .dashboard-header p,
    .dashboard .dashboard-header p,
    .dashboard-header p {
      font-size: 0.9375rem !important;
      color: #6b7280 !important;
      font-weight: 400 !important;
      visibility: visible !important;
      opacity: 1 !important;
      display: block !important;
      text-shadow: none !important;
      -webkit-text-fill-color: #6b7280 !important;
      animation: none !important;
      transform: none !important;
    }

    /* Stats Grid */
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1.25rem;
      margin-bottom: 1.5rem;
    }

    /* Updated stat cards with light theme and icons positioned on the right */
    .dashboard-main .stat-card,
    .dashboard .stat-card,
    .stat-card {
      background: #ffffff !important;
      background-color: #ffffff !important;
      border: none !important;
      padding: 1.5rem;
      border-radius: 12px;
      transition: all 0.2s ease;
      box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.05);
      opacity: 1 !important;
    }

    .stat-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 1.25rem;
      width: 100%;
      position: relative;
    }

    .stat-title {
      font-size: 0.8125rem;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: var(--text-secondary);
    }

    .stat-icon {
      width: 48px;
      height: 48px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.25rem;
      color: var(--accent-main);
      background: none !important;
      position: absolute;
      right: 0;
      top: 0;
      box-shadow: none !important;
      text-shadow: none !important;
      filter: none !important;
    }

    .stat-card:hover .stat-icon {
      transform: scale(1.05);
    }

    .stat-content {
      margin-top: 0.75rem;
    }

    .stat-number {
      font-size: 2.25rem;
      font-weight: 700;
      line-height: 1;
      margin-bottom: 0.75rem;
      color: var(--text-primary);
      letter-spacing: -0.02em;
    }

    .stat-details {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      flex-wrap: wrap;
    }

    .stat-details > span:first-child {
      font-size: 0.875rem;
      color: var(--text-secondary);
      font-weight: 500;
    }

    .stat-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.375rem;
      padding: 0.25rem 0.625rem;
      background: var(--bg-tertiary);
      border-radius: 6px;
      font-weight: 600;
      font-size: 0.8125rem;
      border: 1px solid var(--border-secondary);
    }

    .stat-badge.positive {
      background: rgba(34, 197, 94, 0.1);
      color: #16a34a;
      border-color: rgba(34, 197, 94, 0.2);
    }

    .stat-badge.negative {
      background: rgba(239, 68, 68, 0.1);
      color: #dc2626;
      border-color: rgba(239, 68, 68, 0.2);
    }

    .stat-badge i {
      font-size: 0.75rem;
    }

    /* Chart sections with light theme */
    .dashboard-main .chart-section,
    .dashboard .chart-section,
    .chart-section {
      background: #ffffff !important;
      background-color: #ffffff !important;
      border: none !important;
      padding: 1.75rem;
      border-radius: 12px;
      margin-bottom: 1.5rem;
      transition: all 0.2s ease;
      box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.05);
      opacity: 1 !important;
    }

    .dashboard-main .chart-section:hover,
    .dashboard .chart-section:hover,
    .chart-section:hover {
      background: #ffffff !important;
      background-color: #ffffff !important;
      box-shadow: 0 4px 12px 0 rgba(0, 0, 0, 0.08);
      opacity: 1 !important;
    }

    .chart-header {
      margin-bottom: 1.75rem;
    }

    .chart-header h2 {
      font-size: 1.125rem;
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: 0.375rem;
      display: flex;
      align-items: center;
      gap: 0.625rem;
      letter-spacing: -0.01em;
    }

    .chart-header h2 i {
      font-size: 1rem;
      color: var(--accent-red);
    }

    .chart-header p {
      font-size: 0.875rem;
      color: var(--text-secondary);
      font-weight: 400;
    }

    .dashboard-main .chart-container,
    .dashboard .chart-container,
    .chart-container {
      position: relative;
      height: 380px;
      width: 100%;
      padding: 1.25rem;
      background: #ffffff !important;
      background-color: #ffffff !important;
      border-radius: 8px;
      border: none !important;
      opacity: 1 !important;
    }

    /* Services Grid */
    .services-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
      gap: 1.25rem;
      margin-top: 1.25rem;
    }

    .dashboard-main .service-card,
    .dashboard .service-card,
    .chart-section .service-card,
    .service-card {
      background: #ffffff !important;
      background-color: #ffffff !important;
      border: 1px solid var(--border-primary) !important;
      padding: 1.75rem 1.25rem;
      border-radius: 12px;
      text-align: center;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      opacity: 1 !important;
      box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.03);
      overflow: hidden;
    }

    .service-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(90deg, var(--accent-red), var(--accent-red-light));
      transform: scaleX(0);
      transform-origin: left;
      transition: transform 0.3s ease;
    }

    .dashboard-main .service-card:hover,
    .dashboard .service-card:hover,
    .chart-section .service-card:hover,
    .service-card:hover {
      background: #ffffff !important;
      background-color: #ffffff !important;
      transform: translateY(-4px);
      box-shadow: 0 8px 24px 0 rgba(197, 29, 52, 0.12);
      border-color: rgba(197, 29, 52, 0.2) !important;
      opacity: 1 !important;
    }

    .service-card:hover::before {
      transform: scaleX(1);
    }

    .service-icon-wrapper {
      width: 64px;
      height: 64px;
      margin: 0 auto 1.25rem;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, rgba(197, 29, 52, 0.1), rgba(197, 29, 52, 0.05));
      border-radius: 16px;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
    }

    .service-card:hover .service-icon-wrapper {
      background: linear-gradient(135deg, rgba(197, 29, 52, 0.15), rgba(197, 29, 52, 0.08));
      transform: scale(1.05) rotate(5deg);
    }

    .service-icon {
      font-size: 1.875rem;
      color: var(--accent-red);
      display: block;
      line-height: 1;
      text-align: center;
      transition: all 0.3s ease;
      position: relative;
      z-index: 1;
      margin: 0;
      padding: 0;
    }

    .service-icon-wrapper img.service-icon {
      width: 100%;
      height: 100%;
      object-fit: contain;
      max-width: 48px;
      max-height: 48px;
    }

    .service-card:hover .service-icon {
      transform: scale(1.15);
      color: var(--accent-red-dark);
    }

    .service-card:hover .service-icon-wrapper img.service-icon {
      transform: scale(1.15);
    }

    .service-name {
      font-size: 0.875rem;
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: 0.75rem;
      line-height: 1.4;
      min-height: 2.8em;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .service-count-wrapper {
      display: flex;
      align-items: baseline;
      justify-content: center;
      gap: 0.25rem;
      padding-top: 0.5rem;
      border-top: 1px solid var(--border-secondary);
    }

    .service-count {
      font-size: 1.75rem;
      font-weight: 700;
      color: var(--text-primary);
      letter-spacing: -0.02em;
      line-height: 1;
    }

    .service-count small {
      font-size: 0.75rem;
      color: var(--text-tertiary);
      font-weight: 500;
      text-transform: lowercase;
    }

    /* No Data */
    .no-data {
      text-align: center;
      padding: 3.5rem 2rem;
      color: var(--text-tertiary);
    }

    .no-data i {
      display: block;
      font-size: 2.5rem;
      margin-bottom: 1rem;
      opacity: 0.4;
    }

    .no-data p {
      font-size: 0.9375rem;
      font-weight: 500;
    }

    /* Animations */
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .stat-card,
    .chart-section {
      animation: fadeIn 0.4s ease-out backwards;
    }

    .stat-card:nth-child(1) { animation-delay: 0.05s; }
    .stat-card:nth-child(2) { animation-delay: 0.1s; }
    .stat-card:nth-child(3) { animation-delay: 0.15s; }

    /* Responsive */
    @media (max-width: 768px) {
      .dashboard-main {
        padding: 1.5rem;
        margin-left: 0;
      }

      .dashboard-header h1 {
        font-size: 1.75rem;
      }

      .stats-grid {
        grid-template-columns: 1fr;
        gap: 1rem;
      }

      .stat-number {
        font-size: 2rem;
      }

      .chart-container {
        height: 320px;
        padding: 1rem;
      }

      .services-grid {
        grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
        gap: 1rem;
      }

      .service-card {
        padding: 1.5rem 1rem;
      }

      .service-icon-wrapper {
        width: 56px;
        height: 56px;
        margin-bottom: 1rem;
      }

      .service-icon {
        font-size: 1.625rem;
      }

      .service-name {
        font-size: 0.8125rem;
        min-height: 2.4em;
      }

      .service-count {
        font-size: 1.5rem;
      }

      .chart-section {
        padding: 1.25rem;
      }
    }
  </style>
</head>
<body>
  <div class="dashboard-layout">
    <%- include('../partials/admin-sidebar') %>
    
    <div class="dashboard-main">
      <div class="dashboard">
        <div class="dashboard-header">
          <h1>Dashboard</h1>
          <p>Monitor your business metrics and performance</p>
        </div>

        <!-- Stats Cards -->
        <div class="stats-grid">
          <!-- Total Clients Card -->
          <div class="stat-card">
            <div class="stat-header">
              <div class="stat-title">Total Clients</div>
              <div class="stat-icon"><i class="fas fa-users"></i></div>
            </div>
            <div class="stat-content">
              <div class="stat-number"><%= stats.totalClients %></div>
              <div class="stat-details">
                <span><%= stats.clientsThisMonth %> this month</span>
                <% if (stats.clientPercentageChange !== 0) { %>
                  <span class="stat-badge <%= stats.clientPercentageChange > 0 ? 'positive' : 'negative' %>">
                    <i class="fas fa-<%= stats.clientPercentageChange > 0 ? 'arrow-up' : 'arrow-down' %>"></i>
                    <%= Math.abs(stats.clientPercentageChange) %>%
                  </span>
                <% } %>
              </div>
            </div>
          </div>

          <!-- Total Projects Card -->
          <div class="stat-card">
            <div class="stat-header">
              <div class="stat-title">Total Projects</div>
              <div class="stat-icon"><i class="fas fa-folder"></i></div>
            </div>
            <div class="stat-content">
              <div class="stat-number"><%= stats.totalProjects %></div>
              <div class="stat-details">
                <span><%= stats.projectsThisMonth %> this month</span>
                <% if (stats.projectPercentageChange !== 0) { %>
                  <span class="stat-badge <%= stats.projectPercentageChange > 0 ? 'positive' : 'negative' %>">
                    <i class="fas fa-<%= stats.projectPercentageChange > 0 ? 'arrow-up' : 'arrow-down' %>"></i>
                    <%= Math.abs(stats.projectPercentageChange) %>%
                  </span>
                <% } %>
              </div>
            </div>
          </div>

          <!-- Team Members Card -->
          <div class="stat-card">
            <div class="stat-header">
              <div class="stat-title">Team Members</div>
              <div class="stat-icon"><i class="fas fa-user-friends"></i></div>
            </div>
            <div class="stat-content">
              <div class="stat-number"><%= stats.teamMembers %></div>
              <div class="stat-details">
                <span><%= stats.teamMembersThisMonth %> this month</span>
                <% if (stats.teamPercentageChange !== 0) { %>
                  <span class="stat-badge <%= stats.teamPercentageChange > 0 ? 'positive' : 'negative' %>">
                    <i class="fas fa-<%= stats.teamPercentageChange > 0 ? 'arrow-up' : 'arrow-down' %>"></i>
                    <%= Math.abs(stats.teamPercentageChange) %>%
                  </span>
                <% } %>
              </div>
            </div>
          </div>
        </div>

        <!-- Top Services Section -->
        <div class="chart-section">
          <div class="chart-header">
            <div>
              <h2><i class="fas fa-star"></i> Top Services</h2>
              <p>Services with the most projects</p>
            </div>
          </div>
          <% if (topServices && topServices.length > 0) { %>
            <div class="services-grid">
              <% topServices.forEach(service => { %>
                <div class="service-card">
                  <div class="service-icon-wrapper">
                    <% if (service.icon) { %>
                      <% if (service.icon.startsWith('/')) { %>
                        <img src="<%= service.icon %>" alt="<%= service.title %> Icon" class="service-icon service-icon-img" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                        <i class="fas fa-cog service-icon" style="display: none;"></i>
                      <% } else { %>
                        <i class="fas fa-<%= service.icon %> service-icon"></i>
                      <% } %>
                    <% } else { %>
                      <i class="fas fa-cog service-icon"></i>
                    <% } %>
                  </div>
                  <div class="service-name"><%= service.title %></div>
                  <div class="service-count-wrapper">
                    <span class="service-count"><%= service.project_count %><small> proj</small></span>
                  </div>
                </div>
              <% }) %>
            </div>
          <% } else { %>
            <div class="no-data">
              <i class="fas fa-inbox"></i>
              <p>No services with projects yet</p>
            </div>
          <% } %>
        </div>

        <!-- Top Clients Chart -->
        <div class="chart-section">
          <div class="chart-header">
            <div>
              <h2><i class="fas fa-chart-bar"></i> Top Clients by Projects</h2>
              <p>Clients with the most active projects</p>
            </div>
          </div>
          <% if (topClients && topClients.length > 0) { %>
            <div class="chart-container">
              <canvas id="topClientsChart"></canvas>
            </div>
          <% } else { %>
            <div class="no-data">
              <i class="fas fa-chart-bar"></i>
              <p>No client projects data available yet</p>
            </div>
          <% } %>
        </div>

      </div>
    </div>
  </div>

