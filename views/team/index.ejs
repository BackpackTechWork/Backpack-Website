<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="/Backpack.png">
  
  <!-- SEO Meta Tags -->
  <%- include('../partials/seo-meta', { 
    currentPath: typeof currentPath !== 'undefined' ? currentPath : '/team'
  }) %>
  
  <!-- Mark that JS is enabled -->
  <script>
    document.documentElement.classList.add('js-enabled');
    document.documentElement.classList.remove('no-js');
  </script>
  
  <link rel="stylesheet" href="/css/style.css">
  <noscript><link rel="stylesheet" href="/css/style.css"></noscript>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link rel="stylesheet" type='text/css' href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />
  
  <style>
    /* Smooth scroll behavior - optimized for animations */
    html {
      scroll-behavior: smooth;
      scroll-padding-top: 80px;
    }
    
    /* Ensure smooth scrolling isn't blocked by animations */
    * {
      scroll-margin-top: 80px;
    }
    
    /* Optimize scroll performance during animations */
    html, body {
      will-change: scroll-position;
    }
    
    /* Ensure content is visible for no-JS users */
    html.no-js .team-hero,
    html.no-js .team-card,
    html.no-js .team-grid,
    html.no-js section,
    html.no-js footer,
    html.no-js .section-header,
    html.no-js .animate-on-scroll {
      opacity: 1 !important;
      visibility: visible !important;
      transform: none !important;
      animation: none !important;
    }

    .pagination-btn:not(.disabled):not(.active):hover {
      background: #f8f9fa !important;
      border-color: #c51d34 !important;
      color: #c51d34 !important;
    }

    @media (max-width: 768px) {
      .pagination-container {
        flex-direction: column;
        align-items: stretch;
      }

      .pagination-info {
        text-align: center;
      }

      .pagination {
        justify-content: center;
      }
    }
  </style>
  
  <!-- Fallback for no-JS: ensure content is visible -->
  <noscript>
    <style>
      .team-hero,
      .team-card,
      .team-grid,
      section,
      footer,
      .section-header,
      .animate-on-scroll {
        opacity: 1 !important;
        visibility: visible !important;
        transform: none !important;
        animation: none !important;
      }
    </style>
  </noscript>
</head>
<body>
  <%- include('../partials/header') %>

  <!-- Team Hero -->
  <section class="team-hero">
    <div class="flying-tech-icons">
      <i class="fab fa-react" style="--i:1;"></i>
      <i class="fab fa-python" style="--i:2;"></i>
      <i class="fab fa-js-square" style="--i:3;"></i>
      <i class="fab fa-node-js" style="--i:4;"></i>
      <i class="fab fa-html5" style="--i:5;"></i>
      <i class="fab fa-css3-alt" style="--i:6;"></i>
      <i class="fab fa-vuejs" style="--i:7;"></i>
      <i class="fab fa-angular" style="--i:8;"></i>
      <i class="fab fa-java" style="--i:9;"></i>
      <i class="fab fa-php" style="--i:10;"></i>
      <i class="fab fa-laravel" style="--i:11;"></i>
      <i class="fab fa-swift" style="--i:12;"></i>
      <i class="fab fa-android" style="--i:13;"></i>
      <i class="fas fa-database" style="--i:16;"></i>
      <i class="fab fa-git-alt" style="--i:17;"></i>
      <i class="fab fa-github" style="--i:18;"></i>
      <i class="fab fa-npm" style="--i:19;"></i>
      <i class="fab fa-bootstrap" style="--i:20;"></i>
    </div>
    <div class="container">
      <div class="section-header">
        <div class="section-label">OUR TEAM</div>
        <h2>Meet the Minds Behind <span class="highlight">Backpack</span></h2>
        <p>Talented professionals dedicated to delivering exceptional results</p>
      </div>
    </div>
  </section>

  <!-- Team Grid Section -->
  <section class="team-section">
    <div class="container">
      <% if (teamMembers.length > 0) { %>
        <div class="team-grid">
          <% teamMembers.forEach(member => { %>
            <div class="team-card">
              <a href="/team/<%= member.id %>" class="team-card-link" aria-label="View <%= member.name %>'s profile"></a>
              <div class="team-card-image-wrapper">
                <%
                  let profileImgSrc = member.avatar || '/images/default-avatar.webp';

                  if (profileImgSrc && profileImgSrc.includes('googleusercontent.com')) {
                    profileImgSrc = profileImgSrc.replace(/=s\d+-c$/, '');
                    profileImgSrc += '=s256-c';
                    const cacheBuster = Math.floor(Date.now() / (1000 * 60 * 60));
                    profileImgSrc = '/avatar-proxy?url=' + encodeURIComponent(profileImgSrc) + '&t=' + cacheBuster;
                  }
                %>
                <img src="<%= profileImgSrc %>" alt="<%= member.name %>" class="team-card-image">
                <div class="team-card-overlay">
                  <span class="view-profile-btn">
                    <i class="fas fa-user"></i> View Profile
                  </span>
                </div>
              </div>
              <div class="team-card-content">
                <h3><%= member.name %></h3>
                <p class="position"><%= member.position %></p>
                <p class="bio-text"><%= member.bio ? member.bio.substring(0, 100) + (member.bio.length > 100 ? '...' : '') : 'Passionate about creating innovative solutions.' %></p>
                
                <% if (member.linkedin || member.github || member.twitter || member.instagram || member.facebook) { %>
                  <div class="team-social-links">
                    <% if (member.linkedin) { %>
                      <a href="<%= member.linkedin %>" target="_blank" class="team-social-link" title="LinkedIn">
                        <i class="fab fa-linkedin"></i>
                      </a>
                    <% } %>
                    <% if (member.github) { %>
                      <a href="<%= member.github %>" target="_blank" class="team-social-link" title="GitHub">
                        <i class="fab fa-github"></i>
                      </a>
                    <% } %>
                    <% if (member.twitter) { %>
                      <a href="<%= member.twitter %>" target="_blank" class="team-social-link" title="X (Twitter)">
                        <i class="fab fa-x-twitter"></i>
                      </a>
                    <% } %>
                    <% if (member.instagram) { %>
                      <a href="<%= member.instagram %>" target="_blank" class="team-social-link" title="Instagram">
                        <i class="fab fa-instagram"></i>
                      </a>
                    <% } %>
                    <% if (member.facebook) { %>
                      <a href="<%= member.facebook %>" target="_blank" class="team-social-link" title="Facebook">
                        <i class="fab fa-facebook"></i>
                      </a>
                    <% } %>
                  </div>
                <% } %>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="empty-state">
          <div class="empty-icon">
            <i class="fas fa-users"></i>
          </div>
          <h3>Team Profiles Coming Soon</h3>
          <p>Our team profiles are being updated. Check back soon to meet our talented professionals!</p>
        </div>
      <% } %>

      <!-- Pagination -->
      <% if (pagination && pagination.totalPages > 1) { %>
        <div class="pagination-container" style="margin-top: 3rem; padding: 1.5rem; background: white; border-radius: 12px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem;">
          <div class="pagination-info" style="color: #6b7280; font-size: 0.875rem;">
            Showing <%= ((pagination.currentPage - 1) * pagination.limit) + 1 %> to <%= Math.min(pagination.currentPage * pagination.limit, pagination.totalCount) %> of <%= pagination.totalCount %> results
          </div>
          <div class="pagination" style="display: flex; gap: 0.5rem; align-items: center; flex-wrap: wrap;">
            <% 
              const buildQuery = (page) => {
                return `?page=${page}`;
              };
            %>
            <% if (pagination.hasPrev) { %>
              <a href="/team<%= buildQuery(pagination.currentPage - 1) %>" class="pagination-btn" style="padding: 0.5rem 0.75rem; border-radius: 6px; background: white; border: 1px solid #e5e7eb; color: #111827; text-decoration: none; font-size: 0.875rem; font-weight: 500; transition: all 0.2s; display: inline-flex; align-items: center; gap: 0.5rem;">
                <i class="fas fa-chevron-left"></i>
              </a>
            <% } else { %>
              <span class="pagination-btn disabled" style="padding: 0.5rem 0.75rem; border-radius: 6px; background: white; border: 1px solid #e5e7eb; color: #9ca3af; font-size: 0.875rem; font-weight: 500; opacity: 0.5; cursor: not-allowed; display: inline-flex; align-items: center; gap: 0.5rem;">
                <i class="fas fa-chevron-left"></i>
              </span>
            <% } %>

            <% 
              let startPage = Math.max(1, pagination.currentPage - 2);
              let endPage = Math.min(pagination.totalPages, pagination.currentPage + 2);
              if (endPage - startPage < 4) {
                if (startPage === 1) {
                  endPage = Math.min(5, pagination.totalPages);
                } else {
                  startPage = Math.max(1, pagination.totalPages - 4);
                }
              }
            %>

            <% if (startPage > 1) { %>
              <a href="/team<%= buildQuery(1) %>" class="pagination-btn" style="padding: 0.5rem 0.75rem; border-radius: 6px; background: white; border: 1px solid #e5e7eb; color: #111827; text-decoration: none; font-size: 0.875rem; font-weight: 500; transition: all 0.2s; display: inline-flex; align-items: center; gap: 0.5rem;">1</a>
              <% if (startPage > 2) { %>
                <span class="pagination-ellipsis" style="padding: 0.5rem 0.25rem; color: #6b7280;">...</span>
              <% } %>
            <% } %>

            <% for (let i = startPage; i <= endPage; i++) { %>
              <% if (i === pagination.currentPage) { %>
                <span class="pagination-btn active" style="padding: 0.5rem 0.75rem; border-radius: 6px; background: #c51d34; color: white; border: 1px solid #c51d34; font-size: 0.875rem; font-weight: 500; display: inline-flex; align-items: center; gap: 0.5rem;"><%= i %></span>
              <% } else { %>
                <a href="/team<%= buildQuery(i) %>" class="pagination-btn" style="padding: 0.5rem 0.75rem; border-radius: 6px; background: white; border: 1px solid #e5e7eb; color: #111827; text-decoration: none; font-size: 0.875rem; font-weight: 500; transition: all 0.2s; display: inline-flex; align-items: center; gap: 0.5rem;"><%= i %></a>
              <% } %>
            <% } %>

            <% if (endPage < pagination.totalPages) { %>
              <% if (endPage < pagination.totalPages - 1) { %>
                <span class="pagination-ellipsis" style="padding: 0.5rem 0.25rem; color: #6b7280;">...</span>
              <% } %>
              <a href="/team<%= buildQuery(pagination.totalPages) %>" class="pagination-btn" style="padding: 0.5rem 0.75rem; border-radius: 6px; background: white; border: 1px solid #e5e7eb; color: #111827; text-decoration: none; font-size: 0.875rem; font-weight: 500; transition: all 0.2s; display: inline-flex; align-items: center; gap: 0.5rem;"><%= pagination.totalPages %></a>
            <% } %>

            <% if (pagination.hasNext) { %>
              <a href="/team<%= buildQuery(pagination.currentPage + 1) %>" class="pagination-btn" style="padding: 0.5rem 0.75rem; border-radius: 6px; background: white; border: 1px solid #e5e7eb; color: #111827; text-decoration: none; font-size: 0.875rem; font-weight: 500; transition: all 0.2s; display: inline-flex; align-items: center; gap: 0.5rem;">
                <i class="fas fa-chevron-right"></i>
              </a>
            <% } else { %>
              <span class="pagination-btn disabled" style="padding: 0.5rem 0.75rem; border-radius: 6px; background: white; border: 1px solid #e5e7eb; color: #9ca3af; font-size: 0.875rem; font-weight: 500; opacity: 0.5; cursor: not-allowed; display: inline-flex; align-items: center; gap: 0.5rem;">
                <i class="fas fa-chevron-right"></i>
              </span>
            <% } %>
          </div>
        </div>
      <% } %>
    </div>
  </section>

  <%- include('../partials/footer') %>
  
  <!-- Scroll Animation Script -->
  <script>
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    document.querySelectorAll('section').forEach(section => observer.observe(section));


    const footer = document.querySelector('footer');
    if (footer) {
      footer.style.opacity = '1';
      footer.style.visibility = 'visible';
      footer.classList.add('visible');
    }
  </script>
</body>
</html>
