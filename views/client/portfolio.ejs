    };

    document.addEventListener('DOMContentLoaded', () => {

      document.querySelectorAll(
        '.client-info-card, .stat-card, .section-card, .section-header, .table, .table tbody tr'
      ).forEach(el => el.classList.add('force-show'))


      const shareBtn = document.getElementById('sharePortfolioBtn');
      if (shareBtn) {
        shareBtn.addEventListener('click', async function() {
          const btn = this;
          const originalText = btn.innerHTML;
          

          btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> <span>Generating...</span>';
          btn.disabled = true;

          try {
            await generateShareableImage();
            btn.innerHTML = '<i class="fas fa-check"></i> <span>Downloaded!</span>';
            setTimeout(() => {
              btn.innerHTML = originalText;
              btn.disabled = false;
            }, 2000);
          } catch (error) {
            console.error('Error generating image:', error);
            btn.innerHTML = '<i class="fas fa-exclamation-triangle"></i> <span>Error</span>';
            setTimeout(() => {
              btn.innerHTML = originalText;
              btn.disabled = false;
            }, 2000);
          }
        });
      }
    });


    async function loadImageAsDataUrl(src) {
      return new Promise((resolve) => {
        const img = new Image();
        img.crossOrigin = 'anonymous';
        
        img.onload = function() {
          try {
            const canvas = document.createElement('canvas');
            canvas.width = img.naturalWidth;
            canvas.height = img.naturalHeight;
            const ctx = canvas.getContext('2d');
            ctx.drawImage(img, 0, 0);
            resolve(canvas.toDataURL('image/png'));
          } catch (e) {

            resolve(src);
          }
        };
        
        img.onerror = function() {

          if (src.includes('avatar') || src.includes('googleusercontent')) {
            resolve('/images/default-avatar.png');
          } else {
            resolve('/Backpack.ico');
          }
        };
        
        img.src = src;
      });
    }

    async function generateShareableImage() {

      const clientName = clientShareData.name;
      const clientEmail = clientShareData.email;
      const clientBrand = clientShareData.brand;
      const memberSince = clientShareData.memberSince;
      const projectsCount = clientShareData.projectsCount;
      const inquiriesCount = clientShareData.inquiriesCount;
      

      const avatarImg = document.getElementById('clientAvatarImg');
      let avatarSrc = avatarImg ? avatarImg.src : '/images/default-avatar.png';
      

      const headerLogo = document.querySelector('.logo-img');
      let logoSrc = headerLogo ? headerLogo.src : '/Backpack.ico';
      

      const [avatarDataUrl, logoDataUrl] = await Promise.all([
        loadImageAsDataUrl(avatarSrc),
        loadImageAsDataUrl(logoSrc)
      ]);


      const template = document.getElementById('shareableImageTemplate');
      document.getElementById('shareableName').textContent = clientName;
      document.getElementById('shareableEmail').innerHTML = '<i class="fas fa-envelope"></i> ' + clientEmail;
      
      if (clientBrand) {
        document.getElementById('shareableBrand').innerHTML = '<i class="fas fa-tag"></i> ' + clientBrand;
        document.getElementById('shareableBrand').style.display = 'flex';
      } else {
        document.getElementById('shareableBrand').style.display = 'none';
      }
      
      document.getElementById('shareableMemberSince').innerHTML = '<i class="fas fa-calendar"></i> Member since ' + memberSince;
      

      if (!document.querySelector('link[href*="font-awesome"]')) {
        const faLink = document.createElement('link');
        faLink.rel = 'stylesheet';
        faLink.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css';
        document.head.appendChild(faLink);
        await new Promise(resolve => setTimeout(resolve, 100));
      }
      document.getElementById('shareableProjectsCount').textContent = projectsCount;
      document.getElementById('shareableInquiriesCount').textContent = inquiriesCount;
      

      const avatarImgEl = document.getElementById('shareableAvatarImg');
      const logoImgEl = document.getElementById('shareableLogoImg');
      
      avatarImgEl.src = avatarDataUrl;
      logoImgEl.src = logoDataUrl;
      

      await new Promise((resolve) => {
        let loaded = 0;
        const checkComplete = () => {
          loaded++;
          if (loaded >= 2) {
            setTimeout(resolve, 300); 
          }
        };
        
        if (avatarImgEl.complete) {
          checkComplete();
        } else {
          avatarImgEl.onload = checkComplete;
          avatarImgEl.onerror = checkComplete;
        }
        
        if (logoImgEl.complete) {
          checkComplete();
        } else {
          logoImgEl.onload = checkComplete;
          logoImgEl.onerror = checkComplete;
        }
      });


      if (document.fonts && document.fonts.ready) {
        await document.fonts.ready;
      }

      await new Promise(resolve => setTimeout(resolve, 300));
      

      template.classList.add('rendering');
      template.style.top = '0';
      template.style.left = '0';
      template.style.visibility = 'visible';
      template.style.zIndex = '99999';
      

      await new Promise(resolve => setTimeout(resolve, 500));


      let canvas;
      try {
        canvas = await html2canvas(template, {
          width: 1080,
          height: 1920,
          scale: 2,
          useCORS: true,
          allowTaint: false,
          logging: false,
          backgroundColor: '#ffffff',
          removeContainer: false,
          imageTimeout: 15000,
          foreignObjectRendering: false,
          onclone: (clonedDoc) => {

            const faLink = clonedDoc.createElement('link');
            faLink.rel = 'stylesheet';
            faLink.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css';
            clonedDoc.head.appendChild(faLink);
            

            const fontLink = clonedDoc.createElement('link');
            fontLink.rel = 'stylesheet';
            fontLink.href = 'https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap';
            clonedDoc.head.appendChild(fontLink);
            

            const orbitronLink = clonedDoc.createElement('link');
            orbitronLink.rel = 'stylesheet';
            orbitronLink.href = 'https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700;800;900&display=swap';
            clonedDoc.head.appendChild(orbitronLink);
            

            const clonedTemplate = clonedDoc.getElementById('shareableImageTemplate');
            if (clonedTemplate) {
              clonedTemplate.style.fontFamily = "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif";
              clonedTemplate.style.width = '1080px';
              clonedTemplate.style.height = '1920px';
              clonedTemplate.style.position = 'fixed';
              clonedTemplate.style.top = '0';
              clonedTemplate.style.left = '0';
              clonedTemplate.style.background = 'linear-gradient(180deg, #ffffff 0%, #f9fafb 100%)';
              clonedTemplate.style.visibility = 'visible';
              clonedTemplate.style.zIndex = '99999';
            }
            

            const clonedImages = clonedDoc.querySelectorAll('#shareableImageTemplate img');
            clonedImages.forEach(img => {
              if (img.src && !img.complete) {
                const newImg = new Image();
                newImg.crossOrigin = 'anonymous';
                newImg.src = img.src;
              }
            });
          }
        });
      } finally {

        template.classList.remove('rendering');
        template.style.top = '-10000px';
        template.style.left = '-10000px';
        template.style.visibility = 'hidden';
        template.style.zIndex = '-9999';
      }


      canvas.toBlob((blob) => {
        if (!blob) {
          console.error('Failed to generate image blob');
          return;
        }
        const url = URL.createObjectURL(blob);
        const link = document.createElement('a');
        link.download = `backpack-portfolio-${clientName.replace(/\s+/g, '-').toLowerCase()}-${Date.now()}.png`;
        link.href = url;
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
        setTimeout(() => URL.revokeObjectURL(url), 100);
      }, 'image/png', 1.0);
    }
  </script>
</body>
