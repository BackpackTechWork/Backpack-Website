<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <style>
    :root {
      --accent-red: #c51d34;
      --accent-red-hover: #a01628;
      --accent-red-light: rgba(197, 29, 52, 0.1);
      --text-primary: #111827;
      --text-secondary: #6b7280;
      --border-primary: #e5e7eb;
      --bg-secondary: #f9fafb;
      --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
      --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }

    .force-show {
      opacity: 1 !important;
      transform: none !important;
      visibility: visible !important;
    }

    /* Profile Information Section Styling */
    .profile-section-card {
      background: #ffffff;
      border-radius: 20px;
      box-shadow: var(--shadow-xl);
      padding: 2.5rem;
      border: 1px solid rgba(255, 255, 255, 0.8);
      position: relative;
      overflow: hidden;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .profile-section-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, var(--accent-red) 0%, var(--accent-red-hover) 100%);
    }

    .profile-section-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 25px 30px -5px rgba(0, 0, 0, 0.15), 0 10px 10px -5px rgba(0, 0, 0, 0.06);
    }

    .profile-section-card h3 {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--text-primary);
      margin-bottom: 2rem;
      letter-spacing: -0.02em;
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .profile-section-card h3::before {
      content: '';
      width: 4px;
      height: 24px;
      background: linear-gradient(135deg, var(--accent-red) 0%, var(--accent-red-hover) 100%);
      border-radius: 2px;
    }

    .profile-form {
      animation: fadeInUp 0.6s ease-out;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .profile-form .form-group {
      margin-bottom: 1.75rem;
      animation: fadeInUp 0.6s ease-out both;
    }

    .profile-form .form-group:nth-child(1) { animation-delay: 0.1s; }
    .profile-form .form-group:nth-child(2) { animation-delay: 0.2s; }
    .profile-form .form-group:nth-child(3) { animation-delay: 0.3s; }

    .profile-form .form-group label {
      display: block;
      margin-bottom: 0.75rem;
      font-weight: 600;
      color: var(--text-primary);
      font-size: 0.9375rem;
      letter-spacing: -0.01em;
    }

    .form-control {
      width: 100%;
      padding: 1rem 1.25rem;
      border: 2px solid var(--border-primary);
      border-radius: 12px;
      font-size: 0.9375rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      background: #ffffff;
      color: var(--text-primary);
      font-family: inherit;
      font-weight: 500;
    }

    .form-control::placeholder {
      color: #9ca3af;
      font-weight: 400;
    }

    .form-control:focus {
      outline: none;
      border-color: var(--accent-red);
      box-shadow: 0 0 0 4px var(--accent-red-light);
      transform: translateY(-1px);
    }

    .form-control:hover:not(:focus):not(:disabled) {
      border-color: #d1d5db;
    }

    .form-control:disabled {
      background-color: #f5f5f5;
      cursor: not-allowed;
      opacity: 0.8;
      border-color: #e5e7eb;
    }

    .form-text {
      display: block;
      font-size: 0.875rem;
      margin-top: 0.5rem;
    }

    .provider-info {
      display: flex !important;
      align-items: center;
      gap: 8px;
      margin-top: 10px !important;
      padding: 0.75rem 1rem;
      background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%);
      border-radius: 10px;
      border: 1px solid var(--border-primary);
    }

    .provider-info i {
      font-size: 1.25rem;
    }

    .provider-info i.fa-google {
      color: #4285f4;
    }

    .provider-info i.fa-github {
      color: #333;
    }

    .provider-info i.fa-facebook {
      color: #1877f2;
    }

    .provider-info i.fa-x-twitter {
      color: #000;
    }

    .provider-info i.fa-linkedin {
      color: #0077b5;
    }

    .provider-info i.fa-microsoft {
      color: #00a4ef;
    }

    .provider-info i.fa-envelope {
      color: #666;
    }

    .provider-info strong {
      color: var(--text-primary);
      font-weight: 600;
    }

    .form-actions {
      display: flex;
      gap: 1rem;
      justify-content: flex-end;
      margin-top: 2.5rem;
      padding-top: 2rem;
      border-top: 2px solid var(--bg-secondary);
      animation: fadeInUp 0.6s ease-out 0.4s both;
    }

    .btn-save,
    .btn-cancel {
      padding: 1rem 2rem;
      border-radius: 12px;
      font-weight: 600;
      cursor: pointer;
      border: none;
      font-size: 0.9375rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      letter-spacing: -0.01em;
      position: relative;
      overflow: hidden;
    }

    .btn-save {
      background: linear-gradient(135deg, var(--accent-red) 0%, var(--accent-red-hover) 100%);
      color: white;
      box-shadow: 0 4px 14px 0 rgba(197, 29, 52, 0.4);
    }

    .btn-save:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px 0 rgba(197, 29, 52, 0.5);
    }

    .btn-save:active {
      transform: translateY(0);
    }

    .btn-cancel {
      background: #ffffff;
      color: var(--text-primary);
      border: 2px solid var(--border-primary);
      box-shadow: var(--shadow-sm);
    }

    .btn-cancel:hover {
      background: var(--bg-secondary);
      border-color: var(--text-secondary);
      transform: translateY(-2px);
      box-shadow: var(--shadow-md);
    }

    /* Success/Error Modal */
    .success-modal {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.6);
      backdrop-filter: blur(8px);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 10000;
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .success-modal.show {
      opacity: 1;
      visibility: visible;
    }

    .modal-content-wrapper {
      background: white;
      border-radius: 24px;
      padding: 3rem;
      max-width: 500px;
      width: 90%;
      box-shadow: var(--shadow-xl);
      transform: scale(0.8) translateY(20px);
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      text-align: center;
      border: 1px solid rgba(255, 255, 255, 0.8);
    }

    .success-modal.show .modal-content-wrapper {
      transform: scale(1) translateY(0);
    }

    .modal-icon {
      width: 90px;
      height: 90px;
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      animation: successPulse 0.8s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 8px 24px rgba(16, 185, 129, 0.4);
    }

    .modal-icon.error {
      background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
      box-shadow: 0 8px 24px rgba(239, 68, 68, 0.4);
    }

    .modal-icon i {
      color: white;
      font-size: 2.75rem;
    }

    @keyframes successPulse {
      0% {
        transform: scale(0);
        opacity: 0;
      }
      50% {
        transform: scale(1.15);
      }
      100% {
        transform: scale(1);
        opacity: 1;
      }
    }

    .modal-title {
      font-size: 1.875rem;
      font-weight: 700;
      color: var(--text-primary);
      margin-bottom: 0.75rem;
      letter-spacing: -0.02em;
    }

    .modal-message {
      color: var(--text-secondary);
      font-size: 1rem;
      margin-bottom: 2rem;
      line-height: 1.6;
    }

    .modal-actions {
      display: flex;
      gap: 1rem;
      justify-content: center;
    }

    .modal-btn {
      padding: 0.875rem 2rem;
      border-radius: 12px;
      font-weight: 600;
      cursor: pointer;
      border: none;
      font-size: 0.9375rem;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-block;
    }

    .modal-btn-primary {
      background: linear-gradient(135deg, var(--accent-red) 0%, var(--accent-red-hover) 100%);
      color: white;
      box-shadow: 0 4px 12px rgba(197, 29, 52, 0.3);
    }

    .modal-btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(197, 29, 52, 0.4);
    }

    @media (max-width: 768px) {
      .profile-section-card {
        padding: 1.5rem;
      }

      .form-actions {
        flex-direction: column-reverse;
      }

      .btn-save,
      .btn-cancel {
        width: 100%;
        justify-content: center;
      }
    }
  </style>
</head>
<body>
  <div class="dashboard-layout">
    <%- include('../partials/client-sidebar') %>
    
    <div class="dashboard-main">
      <div class="profile-page-container">
        <div class="container">
          <div class="profile-page-header">
            <h1>My Profile</h1>
            <p>Manage your profile information and settings</p>
          </div>

          <div class="profile-edit-grid">
            <!-- Profile Picture Section -->
            <div class="profile-section-card">
              <h3>Profile Picture</h3>
              <div class="profile-picture-section">
                  <div class="profile-img-wrapper-large">
                  <div class="profile-pulse"></div>
                  <%
                  let profileImgSrc = user.avatar ? user.avatar : '/images/default-avatar.webp';
                
                  if (profileImgSrc.includes('googleusercontent.com')) {

                    profileImgSrc = profileImgSrc.replace(/=s\d+-c$/, '');
                

                    profileImgSrc += '=s256-c';
                    

                    const cacheBuster = Math.floor(Date.now() / (1000 * 60 * 60)); 

                    profileImgSrc = '/avatar-proxy?url=' + encodeURIComponent(profileImgSrc) + '&t=' + cacheBuster;
                  }
                %>
                
                <img 
                  src="<%= profileImgSrc %>" 
                  alt="<%= user.name %>" 
                  class="profile-img-large" 
                  onerror="this.onerror=null; this.src='/images/default-avatar.webp';"
                />
                
                </div>
                <p class="profile-picture-hint">Contact support to change your profile picture</p>
              </div>
            </div>

            <!-- Profile Information Form -->
            <div class="profile-section-card">
              <h3>
                <i class="fas fa-user-edit" style="color: var(--accent-red); font-size: 1.25rem;"></i>
                Profile Information
              </h3>
              <form id="profileForm" class="profile-form">
                <div class="form-group">
                  <label for="name">
                    <i class="fas fa-user" style="margin-right: 0.5rem; color: var(--accent-red); font-size: 0.875rem;"></i>
                    Full Name
                  </label>
                  <input type="text" id="name" name="name" value="<%= user.name %>" class="form-control" required placeholder="Enter your full name">
                </div>

                <div class="form-group">
                  <label for="email">
                    <i class="fas fa-envelope" style="margin-right: 0.5rem; color: var(--accent-red); font-size: 0.875rem;"></i>
                    Email Address
                  </label>
                  <input type="email" id="email" name="email" value="<%= user.email %>" class="form-control" readonly disabled>
                  <small class="form-text provider-info">
                    <%
                      let providerName = user.provider ? user.provider.toLowerCase() : '';
                      let providerIcon = '';
                      let providerDisplayName = '';
                      let providerIconClass = '';
                      
                      if (providerName === 'google') {
                        providerIcon = 'fab fa-google';
                        providerDisplayName = 'Google';
                        providerIconClass = 'fa-google';
                      } else if (providerName === 'github') {
                        providerIcon = 'fab fa-github';
                        providerDisplayName = 'GitHub';
                        providerIconClass = 'fa-github';
                      }
                    %>
                    <% if (providerIcon) { %>
                      <i class="<%= providerIcon %> <%= providerIconClass %>"></i>
                    <% } %>
                    <strong><%= providerDisplayName %></strong>
                  </small>
                </div>

                <div class="form-group">
                  <label for="phone">
                    <i class="fas fa-phone" style="margin-right: 0.5rem; color: var(--accent-red); font-size: 0.875rem;"></i>
                    Phone Number
                  </label>
                  <input type="tel" id="phone" name="phone" value="<%= user.phone || '' %>" class="form-control" placeholder="Enter your phone number (e.g., +1 234 567 8900)">
                </div>

                <div class="form-actions">
                  <button type="button" class="btn-cancel" onclick="window.location.href='/client/profile'">
                    <i class="fas fa-times"></i>
                    Cancel
                  </button>
                  <button type="submit" class="btn-save">
                    <i class="fas fa-save"></i>
                    Save Changes
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Success Modal -->
  <div class="success-modal" id="successModal">
    <div class="modal-content-wrapper">
      <div class="modal-icon">
        <i class="fas fa-check"></i>
      </div>
      <h3 class="modal-title">Profile Updated!</h3>
      <p class="modal-message">Your profile has been successfully updated.</p>
      <div class="modal-actions">
        <button onclick="closeModal('successModal'); window.location.reload();" class="modal-btn modal-btn-primary">OK</button>
      </div>
    </div>
  </div>

  <!-- Error Modal -->
  <div class="success-modal" id="errorModal">
    <div class="modal-content-wrapper">
      <div class="modal-icon error">
        <i class="fas fa-exclamation-triangle"></i>
      </div>
      <h3 class="modal-title">Error Occurred</h3>
      <p class="modal-message" id="errorMessage">Something went wrong. Please try again.</p>
      <div class="modal-actions">
        <button onclick="closeModal('errorModal')" class="modal-btn modal-btn-primary">Close</button>
      </div>
    </div>
  </div>

  <script>

    function showModal(modalId) {
      const modal = document.getElementById(modalId);
      if (modal) {
        modal.classList.add('show');
      }
    }

    function closeModal(modalId) {
      const modal = document.getElementById(modalId);
      if (modal) {
        modal.classList.remove('show');
      }
    }

    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll(
        '.profile-section-card, .profile-form, .profile-form .form-group, .profile-form .form-actions'
      ).forEach(el => el.classList.add('force-show'));


      document.getElementById('profileForm').addEventListener('submit', async function(e) {
        e.preventDefault();

        const formData = {
          name: document.getElementById('name').value,
          phone: document.getElementById('phone').value
        };

        try {
          const response = await fetch('/client/profile', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify(formData)
          });

          const result = await response.json();

          if (result.success) {
            showModal('successModal');
          } else {
            document.getElementById('errorMessage').textContent = result.message || 'Failed to update profile';
            showModal('errorModal');
          }
        } catch (error) {
          console.error('Error:', error);
          document.getElementById('errorMessage').textContent = 'Error updating profile. Please try again.';
          showModal('errorModal');
        }
      });
    });


    document.addEventListener('click', function(e) {
      if (e.target.classList.contains('success-modal')) {
        closeModal(e.target.id);
      }
    });
  </script>
</body>
</html>
